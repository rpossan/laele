<% content_for(:page_title, "Activity Logs") %>
<% content_for(:page_subtitle, "Monitor all user activity across the platform") %>

<!-- Filters -->
<div class="bg-white rounded-xl border border-slate-200 shadow-sm mb-6">
  <div class="px-5 py-4">
    <%= form_tag admin_activity_logs_path, method: :get, class: "flex flex-wrap items-end gap-3" do %>
      <div class="flex-1 min-w-[180px]">
        <label class="block text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">User</label>
        <input type="text" name="search" value="<%= params[:search] %>" placeholder="Search by email..."
          class="w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500" />
      </div>

      <div class="w-48">
        <label class="block text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">Action</label>
        <select name="action_type" class="w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500">
          <option value="">All actions</option>
          <% @action_types.each do |at| %>
            <option value="<%= at %>" <%= 'selected' if params[:action_type] == at %>><%= at.titleize %></option>
          <% end %>
        </select>
      </div>

      <div class="w-40">
        <label class="block text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">From</label>
        <input type="date" name="date_from" value="<%= params[:date_from] %>"
          class="w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500" />
      </div>

      <div class="w-40">
        <label class="block text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">To</label>
        <input type="date" name="date_to" value="<%= params[:date_to] %>"
          class="w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500" />
      </div>

      <div class="flex gap-2">
        <button type="submit" class="inline-flex items-center px-4 py-2 rounded-lg bg-indigo-600 text-white text-sm font-semibold hover:bg-indigo-700 transition-colors shadow-sm">
          Filter
        </button>
        <% if params.except(:controller, :action).any? %>
          <%= link_to "Clear", admin_activity_logs_path, class: "inline-flex items-center px-3 py-2 rounded-lg border border-slate-300 text-sm font-medium text-slate-600 hover:bg-slate-50 transition-colors" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<!-- Logs Table -->
<div class="bg-white rounded-xl border border-slate-200 shadow-sm overflow-hidden">
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-slate-200">
      <thead class="bg-slate-50">
        <tr>
          <th class="px-5 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Time</th>
          <th class="px-5 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">User</th>
          <th class="px-5 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Action</th>
          <th class="px-5 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Description</th>
          <th class="px-5 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Resource</th>
          <th class="px-5 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">IP</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-100">
        <% if @activity_logs.any? %>
          <% @activity_logs.each do |log| %>
            <tr class="hover:bg-slate-50 transition-colors">
              <td class="px-5 py-3 whitespace-nowrap">
                <span class="text-sm text-slate-600"><%= log.created_at.strftime("%b %d, %H:%M") %></span>
                <p class="text-[10px] text-slate-400"><%= admin_time_ago(log.created_at) %></p>
              </td>
              <td class="px-5 py-3">
                <% if log.user %>
                  <%= link_to log.user.email, admin_user_path(log.user), class: "text-sm font-medium text-slate-900 hover:text-indigo-600" %>
                <% else %>
                  <span class="text-sm text-slate-400">Unknown</span>
                <% end %>
              </td>
              <td class="px-5 py-3">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-blue-50 text-blue-700 border border-blue-100">
                  <%= log.formatted_action %>
                </span>
              </td>
              <td class="px-5 py-3 max-w-xs">
                <p class="text-sm text-slate-600 truncate"><%= log.formatted_description %></p>
              </td>
              <td class="px-5 py-3">
                <% if log.resource_type.present? %>
                  <span class="text-xs text-slate-500"><%= log.resource_type %> #<%= log.resource_id %></span>
                <% else %>
                  <span class="text-xs text-slate-400">—</span>
                <% end %>
              </td>
              <td class="px-5 py-3">
                <span class="text-xs font-mono text-slate-500"><%= log.ip_address || "—" %></span>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="6" class="px-5 py-12 text-center">
              <svg class="w-12 h-12 mx-auto text-slate-300 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
              </svg>
              <p class="text-sm text-slate-500">No activity logs found</p>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <% if @pagy.pages > 1 %>
    <div class="px-5 py-4 border-t border-slate-200 flex items-center justify-between">
      <p class="text-sm text-slate-500">
        Showing <strong><%= @pagy.from %></strong> to <strong><%= @pagy.to %></strong> of <strong><%= @pagy.count %></strong> logs
      </p>
      <div class="flex gap-1">
        <% if @pagy.prev %>
          <%= link_to "← Prev", request.params.merge(page: @pagy.prev), class: "px-3 py-1.5 rounded-lg text-sm font-medium text-slate-600 bg-white border border-slate-300 hover:bg-slate-50" %>
        <% end %>
        <% if @pagy.next %>
          <%= link_to "Next →", request.params.merge(page: @pagy.next), class: "px-3 py-1.5 rounded-lg text-sm font-medium text-slate-600 bg-white border border-slate-300 hover:bg-slate-50" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
