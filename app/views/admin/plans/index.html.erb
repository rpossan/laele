<% content_for(:page_title, "Plans") %>
<% content_for(:page_subtitle, "Overview of all subscription plans and their performance") %>

<div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
  <% @plans.each do |item| %>
    <% plan = item[:plan] %>
    <div class="bg-white rounded-xl border border-slate-200 shadow-sm overflow-hidden hover:shadow-md transition-shadow">
      <!-- Plan Header -->
      <div class="px-6 py-5 border-b border-slate-100 <%= plan.recommended? ? 'bg-gradient-to-r from-indigo-50 to-violet-50' : 'bg-slate-50' %>">
        <div class="flex items-start justify-between">
          <div>
            <h3 class="text-lg font-bold text-slate-900"><%= plan.name %></h3>
            <p class="text-sm text-slate-500 mt-0.5"><%= plan.slug %></p>
          </div>
          <div class="flex gap-1.5">
            <% if plan.recommended? %>
              <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[10px] font-semibold bg-indigo-100 text-indigo-700">Recommended</span>
            <% end %>
            <% if plan.active? %>
              <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[10px] font-semibold bg-emerald-100 text-emerald-700">Active</span>
            <% else %>
              <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[10px] font-semibold bg-slate-100 text-slate-500">Inactive</span>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Plan Pricing -->
      <div class="px-6 py-4 border-b border-slate-100">
        <div class="grid grid-cols-2 gap-4">
          <div>
            <p class="text-[10px] font-semibold text-slate-500 uppercase tracking-wider">Price (BRL)</p>
            <p class="text-lg font-bold text-slate-900"><%= plan.display_price_brl %></p>
          </div>
          <div>
            <p class="text-[10px] font-semibold text-slate-500 uppercase tracking-wider">Price (USD)</p>
            <p class="text-lg font-bold text-slate-900"><%= plan.display_price_usd %></p>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-4 mt-3">
          <div>
            <p class="text-[10px] font-semibold text-slate-500 uppercase tracking-wider">Type</p>
            <p class="text-sm text-slate-700"><%= plan.pricing_type.titleize %></p>
          </div>
          <div>
            <p class="text-[10px] font-semibold text-slate-500 uppercase tracking-wider">Max Accounts</p>
            <p class="text-sm text-slate-700"><%= plan.unlimited? ? "Unlimited" : plan.max_accounts %></p>
          </div>
        </div>
      </div>

      <!-- Plan Stats -->
      <div class="px-6 py-4 space-y-3">
        <div class="flex items-center justify-between">
          <span class="text-sm text-slate-500">Total subscriptions</span>
          <span class="text-sm font-bold text-slate-900"><%= item[:total_subscriptions] %></span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-sm text-slate-500">Active</span>
          <span class="text-sm font-bold text-emerald-600"><%= item[:active_subscriptions] %></span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-sm text-slate-500">Pending</span>
          <span class="text-sm font-bold text-amber-600"><%= item[:pending_subscriptions] %></span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-sm text-slate-500">Cancelled</span>
          <span class="text-sm font-bold text-slate-500"><%= item[:cancelled_subscriptions] %></span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-sm text-slate-500">Avg. accounts/user</span>
          <span class="text-sm font-bold text-slate-900"><%= item[:avg_accounts] %></span>
        </div>

        <div class="border-t border-slate-100 pt-3 mt-3">
          <div class="flex items-center justify-between">
            <span class="text-sm font-semibold text-slate-700">Revenue (BRL)</span>
            <span class="text-sm font-bold text-indigo-600"><%= number_to_currency(item[:revenue_brl], unit: "R$ ", separator: ",", delimiter: ".") %></span>
          </div>
          <div class="flex items-center justify-between mt-1">
            <span class="text-sm font-semibold text-slate-700">Revenue (USD)</span>
            <span class="text-sm font-bold text-indigo-600"><%= number_to_currency(item[:revenue_usd], unit: "USD ", separator: ".", delimiter: ",") %></span>
          </div>
        </div>
      </div>

      <!-- Stripe Info -->
      <% if plan.stripe_price_id_brl.present? || plan.stripe_payment_link.present? %>
        <div class="px-6 py-3 border-t border-slate-100 bg-slate-50">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-violet-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
            </svg>
            <span class="text-xs text-slate-500">Stripe configured</span>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<% if @plans.empty? %>
  <div class="bg-white rounded-xl border border-slate-200 shadow-sm px-6 py-12 text-center">
    <svg class="w-12 h-12 mx-auto text-slate-300 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
    </svg>
    <p class="text-sm font-medium text-slate-500">No plans configured</p>
    <p class="text-xs text-slate-400 mt-1">Plans need to be created via seeds or migrations</p>
  </div>
<% end %>
