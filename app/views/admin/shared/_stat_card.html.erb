<div class="admin-stat-card bg-white rounded-xl border <%= c[:border] %> p-5 shadow-sm">
  <div class="flex items-start justify-between">
    <div>
      <p class="text-xs font-semibold uppercase tracking-wider text-slate-500"><%= title %></p>
      <p class="text-2xl font-bold text-slate-900 mt-1"><%= value %></p>
      <% if subtitle.present? %>
        <p class="text-xs text-slate-500 mt-1"><%= subtitle %></p>
      <% end %>
    </div>
    <% if icon.present? %>
      <div class="<%= c[:icon_bg] %> rounded-lg p-2.5">
        <svg class="w-5 h-5 <%= c[:icon_text] %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= icon %>"/>
        </svg>
      </div>
    <% end %>
  </div>
</div>
