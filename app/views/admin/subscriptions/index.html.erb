<% content_for(:page_title, "Subscriptions") %>
<% content_for(:page_subtitle, "Manage all user subscriptions and payments") %>

<!-- Summary Cards -->
<div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-6">
  <%= admin_stat_card(
    title: "Active Subscriptions",
    value: @total_active,
    icon: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z",
    color: "emerald"
  ) %>
  <%= admin_stat_card(
    title: "Pending Payment",
    value: @total_pending,
    icon: "M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z",
    color: "amber"
  ) %>
  <%= admin_stat_card(
    title: "Monthly Revenue (BRL)",
    value: admin_currency(@total_revenue_brl),
    icon: "M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z",
    color: "indigo"
  ) %>
</div>

<!-- Filters -->
<div class="bg-white rounded-xl border border-slate-200 shadow-sm mb-6">
  <div class="px-5 py-4">
    <%= form_tag admin_subscriptions_path, method: :get, class: "flex flex-wrap items-end gap-3" do %>
      <div class="flex-1 min-w-[200px]">
        <label class="block text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">Search</label>
        <input type="text" name="search" value="<%= params[:search] %>" placeholder="Search by user email..."
          class="w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500" />
      </div>

      <div class="w-40">
        <label class="block text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">Status</label>
        <select name="status" class="w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500">
          <option value="">All statuses</option>
          <% UserSubscription::STATUSES.each do |s| %>
            <option value="<%= s %>" <%= 'selected' if params[:status] == s %>><%= s.titleize %></option>
          <% end %>
        </select>
      </div>

      <div class="w-44">
        <label class="block text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">Plan</label>
        <select name="plan_id" class="w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500">
          <option value="">All plans</option>
          <% @plans.each do |plan| %>
            <option value="<%= plan.id %>" <%= 'selected' if params[:plan_id] == plan.id.to_s %>><%= plan.name %></option>
          <% end %>
        </select>
      </div>

      <div class="flex gap-2">
        <button type="submit" class="inline-flex items-center px-4 py-2 rounded-lg bg-indigo-600 text-white text-sm font-semibold hover:bg-indigo-700 transition-colors shadow-sm">
          Filter
        </button>
        <% if params.except(:controller, :action).any? %>
          <%= link_to "Clear", admin_subscriptions_path, class: "inline-flex items-center px-3 py-2 rounded-lg border border-slate-300 text-sm font-medium text-slate-600 hover:bg-slate-50 transition-colors" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<!-- Table -->
<div class="bg-white rounded-xl border border-slate-200 shadow-sm overflow-hidden">
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-slate-200">
      <thead class="bg-slate-50">
        <tr>
          <th class="px-5 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">
            <%= admin_sort_link("User", "user") %>
          </th>
          <th class="px-5 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">
            <%= admin_sort_link("Plan", "plan") %>
          </th>
          <th class="px-5 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">
            <%= admin_sort_link("Status", "status") %>
          </th>
          <th class="px-5 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Accounts</th>
          <th class="px-5 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">
            <%= admin_sort_link("Price (BRL)", "price") %>
          </th>
          <th class="px-5 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Stripe</th>
          <th class="px-5 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">
            <%= admin_sort_link("Started At", "started_at") %>
          </th>
          <th class="px-5 py-3 text-right text-xs font-semibold text-slate-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-100">
        <% @subscriptions.each do |sub| %>
          <tr class="hover:bg-slate-50 transition-colors">
            <td class="px-5 py-3">
              <%= link_to sub.user.email, admin_user_path(sub.user), class: "text-sm font-medium text-slate-900 hover:text-indigo-600" %>
            </td>
            <td class="px-5 py-3">
              <span class="text-sm font-medium text-slate-900"><%= sub.plan.name %></span>
              <p class="text-[11px] text-slate-400"><%= sub.plan.pricing_type.titleize %></p>
            </td>
            <td class="px-5 py-3">
              <%= admin_status_badge(sub.status) %>
            </td>
            <td class="px-5 py-3">
              <span class="text-sm text-slate-900"><%= sub.selected_accounts_count || "—" %></span>
            </td>
            <td class="px-5 py-3">
              <span class="text-sm font-semibold text-slate-900"><%= sub.display_price_brl %></span>
              <p class="text-[11px] text-slate-400"><%= sub.display_price_usd %></p>
            </td>
            <td class="px-5 py-3">
              <% if sub.stripe_customer_id.present? %>
                <span class="inline-flex items-center gap-1 text-xs text-emerald-700">
                  <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  Connected
                </span>
              <% else %>
                <span class="text-xs text-slate-400">—</span>
              <% end %>
            </td>
            <td class="px-5 py-3">
              <% if sub.started_at %>
                <span class="text-sm text-slate-600"><%= sub.started_at.strftime("%b %d, %Y") %></span>
              <% else %>
                <span class="text-xs text-slate-400">Not started</span>
              <% end %>
            </td>
            <td class="px-5 py-3 text-right">
              <%= link_to admin_subscription_path(sub), class: "inline-flex items-center px-3 py-1.5 rounded-lg text-xs font-medium text-indigo-600 bg-indigo-50 hover:bg-indigo-100 transition-colors" do %>
                View
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <% if @pagy.pages > 1 %>
    <div class="px-5 py-4 border-t border-slate-200 flex items-center justify-between">
      <p class="text-sm text-slate-500">
        Showing <strong><%= @pagy.from %></strong> to <strong><%= @pagy.to %></strong> of <strong><%= @pagy.count %></strong> subscriptions
      </p>
      <div class="flex gap-1">
        <% if @pagy.prev %>
          <%= link_to "← Prev", request.params.merge(page: @pagy.prev), class: "px-3 py-1.5 rounded-lg text-sm font-medium text-slate-600 bg-white border border-slate-300 hover:bg-slate-50" %>
        <% end %>
        <% if @pagy.next %>
          <%= link_to "Next →", request.params.merge(page: @pagy.next), class: "px-3 py-1.5 rounded-lg text-sm font-medium text-slate-600 bg-white border border-slate-300 hover:bg-slate-50" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
