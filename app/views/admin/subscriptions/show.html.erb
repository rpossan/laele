<% content_for(:page_title, "Subscription Details") %>
<% content_for(:page_subtitle, "#{@user.email} — #{@subscription.plan.name}") %>

<!-- Back link -->
<div class="mb-6">
  <%= link_to admin_subscriptions_path, class: "inline-flex items-center gap-1.5 text-sm font-medium text-slate-500 hover:text-slate-700 transition-colors" do %>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12"/>
    </svg>
    Back to subscriptions
  <% end %>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Subscription Card -->
  <div class="bg-white rounded-xl border border-slate-200 shadow-sm overflow-hidden">
    <div class="bg-gradient-to-br from-emerald-600 to-teal-600 px-6 py-6 text-center">
      <p class="text-white/70 text-xs font-semibold uppercase tracking-wider mb-1">Current Plan</p>
      <p class="text-2xl font-bold text-white"><%= @subscription.plan.name %></p>
      <div class="mt-2"><%= admin_status_badge(@subscription.status) %></div>
    </div>

    <div class="px-6 py-4 space-y-3">
      <div class="flex justify-between text-sm">
        <span class="text-slate-500">Monthly (BRL)</span>
        <span class="font-bold text-slate-900"><%= @subscription.display_price_brl %></span>
      </div>
      <div class="flex justify-between text-sm">
        <span class="text-slate-500">Monthly (USD)</span>
        <span class="font-bold text-slate-900"><%= @subscription.display_price_usd %></span>
      </div>
      <div class="flex justify-between text-sm">
        <span class="text-slate-500">Accounts</span>
        <span class="font-semibold text-slate-900"><%= @subscription.selected_accounts_count || "—" %></span>
      </div>
      <div class="flex justify-between text-sm">
        <span class="text-slate-500">Pricing Type</span>
        <span class="text-slate-900"><%= @subscription.plan.pricing_type.titleize %></span>
      </div>
    </div>
  </div>

  <!-- Details -->
  <div class="lg:col-span-2 space-y-6">
    <!-- Timeline -->
    <div class="bg-white rounded-xl border border-slate-200 shadow-sm">
      <div class="px-6 py-4 border-b border-slate-100">
        <h3 class="text-sm font-bold text-slate-900">Timeline</h3>
      </div>
      <div class="px-6 py-5">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <p class="text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">Created</p>
            <p class="text-sm text-slate-900"><%= @subscription.created_at.strftime("%b %d, %Y %H:%M") %></p>
          </div>
          <div>
            <p class="text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">Started</p>
            <p class="text-sm text-slate-900"><%= @subscription.started_at&.strftime("%b %d, %Y %H:%M") || "Not started" %></p>
          </div>
          <% if @subscription.expires_at %>
            <div>
              <p class="text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">Expires</p>
              <p class="text-sm text-slate-900"><%= @subscription.expires_at.strftime("%b %d, %Y %H:%M") %></p>
            </div>
          <% end %>
          <% if @subscription.cancelled_at %>
            <div>
              <p class="text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">Cancelled</p>
              <p class="text-sm text-rose-600"><%= @subscription.cancelled_at.strftime("%b %d, %Y %H:%M") %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Stripe Details -->
    <div class="bg-white rounded-xl border border-slate-200 shadow-sm">
      <div class="px-6 py-4 border-b border-slate-100">
        <h3 class="text-sm font-bold text-slate-900">Stripe Integration</h3>
      </div>
      <div class="px-6 py-5">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <p class="text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">Stripe Customer ID</p>
            <% if @subscription.stripe_customer_id.present? %>
              <p class="text-sm font-mono text-slate-900"><%= @subscription.stripe_customer_id %></p>
            <% else %>
              <p class="text-sm text-slate-400">Not set</p>
            <% end %>
          </div>
          <div>
            <p class="text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">Stripe Subscription ID</p>
            <% if @subscription.stripe_subscription_id.present? %>
              <p class="text-sm font-mono text-slate-900"><%= @subscription.stripe_subscription_id %></p>
            <% else %>
              <p class="text-sm text-slate-400">Not set</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- User Link -->
    <div class="bg-white rounded-xl border border-slate-200 shadow-sm">
      <div class="px-6 py-4 border-b border-slate-100">
        <h3 class="text-sm font-bold text-slate-900">User</h3>
      </div>
      <div class="px-6 py-5 flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-full flex items-center justify-center text-sm font-bold text-white bg-slate-400">
            <%= @user.email[0].upcase %>
          </div>
          <div>
            <p class="text-sm font-medium text-slate-900"><%= @user.email %></p>
            <p class="text-xs text-slate-500">Registered <%= @user.created_at.strftime("%b %d, %Y") %></p>
          </div>
        </div>
        <%= link_to "View user →", admin_user_path(@user), class: "text-sm font-medium text-indigo-600 hover:text-indigo-700" %>
      </div>
    </div>
  </div>
</div>
