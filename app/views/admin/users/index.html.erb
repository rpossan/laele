<% content_for(:page_title, "Users") %>
<% content_for(:page_subtitle, "Manage all registered users, their plans and status") %>

<!-- Filters -->
<div class="bg-white rounded-xl border border-slate-200 shadow-sm mb-6">
  <div class="px-5 py-4">
    <%= form_tag admin_users_path, method: :get, class: "flex flex-wrap items-end gap-3" do %>
      <div class="flex-1 min-w-[200px]">
        <label class="block text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">Search</label>
        <input type="text" name="search" value="<%= params[:search] %>" placeholder="Search by email..."
          class="w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500" />
      </div>

      <div class="w-40">
        <label class="block text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">Role</label>
        <select name="role" class="w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500">
          <option value="">All roles</option>
          <option value="admin" <%= 'selected' if params[:role] == 'admin' %>>Admin</option>
          <option value="user" <%= 'selected' if params[:role] == 'user' %>>User</option>
        </select>
      </div>

      <div class="w-44">
        <label class="block text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">Subscription</label>
        <select name="subscription_status" class="w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500">
          <option value="">All statuses</option>
          <option value="active" <%= 'selected' if params[:subscription_status] == 'active' %>>Active</option>
          <option value="pending" <%= 'selected' if params[:subscription_status] == 'pending' %>>Pending</option>
          <option value="cancelled" <%= 'selected' if params[:subscription_status] == 'cancelled' %>>Cancelled</option>
          <option value="none" <%= 'selected' if params[:subscription_status] == 'none' %>>No subscription</option>
        </select>
      </div>

      <div class="w-44">
        <label class="block text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">Plan</label>
        <select name="plan_id" class="w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500">
          <option value="">All plans</option>
          <% @plans.each do |plan| %>
            <option value="<%= plan.id %>" <%= 'selected' if params[:plan_id] == plan.id.to_s %>><%= plan.name %></option>
          <% end %>
        </select>
      </div>

      <div class="w-36">
        <label class="block text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">Allowed</label>
        <select name="allowed" class="w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500">
          <option value="">All</option>
          <option value="true" <%= 'selected' if params[:allowed] == 'true' %>>Allowed</option>
          <option value="false" <%= 'selected' if params[:allowed] == 'false' %>>Not allowed</option>
        </select>
      </div>

      <div class="flex gap-2">
        <button type="submit" class="inline-flex items-center px-4 py-2 rounded-lg bg-indigo-600 text-white text-sm font-semibold hover:bg-indigo-700 transition-colors shadow-sm">
          <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
          Filter
        </button>
        <% if params.except(:controller, :action).any? %>
          <%= link_to admin_users_path, class: "inline-flex items-center px-3 py-2 rounded-lg border border-slate-300 text-sm font-medium text-slate-600 hover:bg-slate-50 transition-colors" do %>
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
            Clear
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<!-- Users Table -->
<div class="bg-white rounded-xl border border-slate-200 shadow-sm overflow-hidden">
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-slate-200">
      <thead class="bg-slate-50">
        <tr>
          <th class="px-5 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">
            <%= admin_sort_link("User", "email") %>
          </th>
          <th class="px-5 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Role</th>
          <th class="px-5 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Plan</th>
          <th class="px-5 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Subscription</th>
          <th class="px-5 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Price (BRL)</th>
          <th class="px-5 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Google</th>
          <th class="px-5 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Allowed</th>
          <th class="px-5 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">
            <%= admin_sort_link("Registered", "created_at") %>
          </th>
          <th class="px-5 py-3 text-right text-xs font-semibold text-slate-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-100">
        <% @users.each do |user| %>
          <tr class="hover:bg-slate-50 transition-colors">
            <!-- User -->
            <td class="px-5 py-3">
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 rounded-full flex items-center justify-center text-xs font-bold text-white flex-shrink-0 <%= user.admin? ? 'bg-violet-600' : 'bg-slate-400' %>">
                  <%= user.email[0].upcase %>
                </div>
                <div>
                  <%= link_to user.email, admin_user_path(user), class: "text-sm font-medium text-slate-900 hover:text-indigo-600" %>
                  <p class="text-[11px] text-slate-400">ID: <%= user.id %></p>
                </div>
              </div>
            </td>

            <!-- Role -->
            <td class="px-5 py-3">
              <% if user.admin? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-violet-100 text-violet-800 border border-violet-200">Admin</span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-slate-100 text-slate-600 border border-slate-200">User</span>
              <% end %>
            </td>

            <!-- Plan -->
            <td class="px-5 py-3">
              <% if user.user_subscription&.plan %>
                <span class="text-sm font-medium text-slate-900"><%= user.user_subscription.plan.name %></span>
                <% if user.user_subscription.selected_accounts_count %>
                  <p class="text-[11px] text-slate-400"><%= user.user_subscription.selected_accounts_count %> accounts</p>
                <% end %>
              <% else %>
                <span class="text-sm text-slate-400">—</span>
              <% end %>
            </td>

            <!-- Subscription Status -->
            <td class="px-5 py-3">
              <% if user.user_subscription %>
                <%= admin_status_badge(user.user_subscription.status) %>
              <% else %>
                <span class="text-xs text-slate-400">None</span>
              <% end %>
            </td>

            <!-- Price -->
            <td class="px-5 py-3">
              <% if user.user_subscription %>
                <span class="text-sm font-medium text-slate-900"><%= user.user_subscription.display_price_brl %></span>
              <% else %>
                <span class="text-sm text-slate-400">—</span>
              <% end %>
            </td>

            <!-- Google Connected -->
            <td class="px-5 py-3">
              <% if user.google_accounts.any? %>
                <span class="inline-flex items-center gap-1 text-xs text-emerald-700">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span class="font-medium"><%= user.google_accounts.sum { |ga| ga.accessible_customers.size } %> acc</span>
                </span>
              <% else %>
                <span class="text-xs text-slate-400">Not connected</span>
              <% end %>
            </td>

            <!-- Allowed -->
            <td class="px-5 py-3">
              <%= admin_bool_badge(user.allowed?) %>
            </td>

            <!-- Registered -->
            <td class="px-5 py-3">
              <span class="text-sm text-slate-600"><%= user.created_at.strftime("%b %d, %Y") %></span>
              <p class="text-[11px] text-slate-400"><%= user.created_at.strftime("%H:%M") %></p>
            </td>

            <!-- Actions -->
            <td class="px-5 py-3 text-right">
              <%= link_to admin_user_path(user), class: "inline-flex items-center px-3 py-1.5 rounded-lg text-xs font-medium text-indigo-600 bg-indigo-50 hover:bg-indigo-100 transition-colors" do %>
                <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                </svg>
                View
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <% if @pagy.pages > 1 %>
    <div class="px-5 py-4 border-t border-slate-200 flex items-center justify-between">
      <p class="text-sm text-slate-500">
        Showing <strong><%= @pagy.from %></strong> to <strong><%= @pagy.to %></strong> of <strong><%= @pagy.count %></strong> users
      </p>
      <div class="flex gap-1">
        <% if @pagy.prev %>
          <%= link_to request.params.merge(page: @pagy.prev), class: "px-3 py-1.5 rounded-lg text-sm font-medium text-slate-600 bg-white border border-slate-300 hover:bg-slate-50" do %>
            ← Prev
          <% end %>
        <% end %>
        <% if @pagy.next %>
          <%= link_to request.params.merge(page: @pagy.next), class: "px-3 py-1.5 rounded-lg text-sm font-medium text-slate-600 bg-white border border-slate-300 hover:bg-slate-50" do %>
            Next →
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
