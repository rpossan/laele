<% content_for(:page_title, "User Details") %>
<% content_for(:page_subtitle, @user.email) %>

<!-- Back link -->
<div class="mb-6">
  <%= link_to admin_users_path, class: "inline-flex items-center gap-1.5 text-sm font-medium text-slate-500 hover:text-slate-700 transition-colors" do %>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12"/>
    </svg>
    Back to users
  <% end %>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Left column: User info -->
  <div class="lg:col-span-1 space-y-6">
    <!-- User Card -->
    <div class="bg-white rounded-xl border border-slate-200 shadow-sm overflow-hidden">
      <div class="bg-gradient-to-br from-indigo-600 to-violet-600 px-6 py-8 text-center">
        <div class="w-16 h-16 mx-auto rounded-full bg-white/20 flex items-center justify-center text-2xl font-bold text-white mb-3">
          <%= @user.email[0].upcase %>
        </div>
        <p class="text-white font-semibold text-sm truncate"><%= @user.email %></p>
        <div class="flex items-center justify-center gap-2 mt-2">
          <% if @user.admin? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-[10px] font-semibold bg-white/20 text-white">Admin</span>
          <% end %>
          <% if @user.allowed? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-[10px] font-semibold bg-emerald-400/20 text-emerald-100">Allowed</span>
          <% end %>
        </div>
      </div>

      <div class="px-6 py-4 space-y-3">
        <div class="flex justify-between text-sm">
          <span class="text-slate-500">ID</span>
          <span class="font-mono text-slate-900">#<%= @user.id %></span>
        </div>
        <div class="flex justify-between text-sm">
          <span class="text-slate-500">Registered</span>
          <span class="text-slate-900"><%= @user.created_at.strftime("%b %d, %Y %H:%M") %></span>
        </div>
        <div class="flex justify-between text-sm">
          <span class="text-slate-500">Last updated</span>
          <span class="text-slate-900"><%= @user.updated_at.strftime("%b %d, %Y %H:%M") %></span>
        </div>
        <div class="flex justify-between text-sm">
          <span class="text-slate-500">Admin</span>
          <%= admin_bool_badge(@user.admin?) %>
        </div>
        <div class="flex justify-between text-sm">
          <span class="text-slate-500">Allowed</span>
          <%= admin_bool_badge(@user.allowed?) %>
        </div>
      </div>

      <!-- Actions -->
      <div class="px-6 py-4 border-t border-slate-100 space-y-2">
        <% unless @user == current_user %>
          <%= button_to toggle_admin_admin_user_path(@user), method: :patch, class: "w-full inline-flex items-center justify-center gap-2 px-4 py-2 rounded-lg text-sm font-medium #{@user.admin? ? 'bg-slate-100 text-slate-700 hover:bg-slate-200' : 'bg-violet-50 text-violet-700 hover:bg-violet-100'} transition-colors", data: { turbo_confirm: "Are you sure you want to #{@user.admin? ? 'remove admin' : 'grant admin'} access for #{@user.email}?" } do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
            <%= @user.admin? ? "Remove Admin" : "Make Admin" %>
          <% end %>
        <% end %>

        <%= button_to toggle_allowed_admin_user_path(@user), method: :patch, class: "w-full inline-flex items-center justify-center gap-2 px-4 py-2 rounded-lg text-sm font-medium #{@user.allowed? ? 'bg-slate-100 text-slate-700 hover:bg-slate-200' : 'bg-emerald-50 text-emerald-700 hover:bg-emerald-100'} transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <%= @user.allowed? ? "Revoke Allowed" : "Grant Allowed" %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Right column: Details -->
  <div class="lg:col-span-2 space-y-6">
    <!-- Subscription Section -->
    <div class="bg-white rounded-xl border border-slate-200 shadow-sm">
      <div class="px-6 py-4 border-b border-slate-100">
        <h3 class="text-sm font-bold text-slate-900">Subscription & Plan</h3>
      </div>
      <div class="px-6 py-5">
        <% if @subscription %>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <p class="text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">Plan</p>
              <p class="text-lg font-bold text-slate-900"><%= @subscription.plan.name %></p>
              <p class="text-sm text-slate-500"><%= @subscription.plan.display_price_brl %></p>
            </div>
            <div>
              <p class="text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">Status</p>
              <div class="mt-1"><%= admin_status_badge(@subscription.status) %></div>
            </div>
            <div>
              <p class="text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">Monthly Price</p>
              <p class="text-lg font-bold text-slate-900"><%= @subscription.display_price_brl %></p>
              <p class="text-xs text-slate-500"><%= @subscription.display_price_usd %></p>
            </div>
            <div>
              <p class="text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">Active Accounts</p>
              <p class="text-lg font-bold text-slate-900"><%= @subscription.selected_accounts_count || "—" %></p>
            </div>
            <% if @subscription.started_at %>
              <div>
                <p class="text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">Started At</p>
                <p class="text-sm text-slate-900"><%= @subscription.started_at.strftime("%b %d, %Y %H:%M") %></p>
              </div>
            <% end %>
            <% if @subscription.expires_at %>
              <div>
                <p class="text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">Expires At</p>
                <p class="text-sm text-slate-900"><%= @subscription.expires_at.strftime("%b %d, %Y %H:%M") %></p>
              </div>
            <% end %>
            <% if @subscription.stripe_customer_id.present? %>
              <div>
                <p class="text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">Stripe Customer</p>
                <p class="text-sm font-mono text-slate-900"><%= @subscription.stripe_customer_id %></p>
              </div>
            <% end %>
            <% if @subscription.stripe_subscription_id.present? %>
              <div>
                <p class="text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">Stripe Subscription</p>
                <p class="text-sm font-mono text-slate-900"><%= @subscription.stripe_subscription_id %></p>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-6">
            <svg class="w-12 h-12 mx-auto text-slate-300 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
            </svg>
            <p class="text-sm font-medium text-slate-500">No subscription</p>
            <p class="text-xs text-slate-400 mt-1">This user hasn't selected a plan yet</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Google Accounts -->
    <div class="bg-white rounded-xl border border-slate-200 shadow-sm">
      <div class="px-6 py-4 border-b border-slate-100">
        <h3 class="text-sm font-bold text-slate-900">Google Ads Accounts</h3>
      </div>
      <div class="px-6 py-5">
        <% if @google_accounts.any? %>
          <% @google_accounts.each do |ga| %>
            <div class="mb-6 last:mb-0">
              <div class="flex items-center gap-3 mb-3">
                <div class="w-8 h-8 rounded-lg bg-blue-100 flex items-center justify-center">
                  <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-semibold text-slate-900">
                    Manager: <%= ga.manager_customer_id.present? ? ga.manager_customer_id_formatted : "N/A" %>
                  </p>
                  <p class="text-xs text-slate-500">
                    Login: <%= ga.login_customer_id.present? ? ga.login_customer_id_formatted : "N/A" %> · Status: <%= ga.status %>
                  </p>
                </div>
              </div>

              <% if ga.accessible_customers.any? %>
                <div class="ml-11 space-y-1.5">
                  <% ga.accessible_customers.ordered.each do |ac| %>
                    <div class="flex items-center justify-between px-3 py-2 rounded-lg <%= ac.active? ? 'bg-emerald-50 border border-emerald-100' : 'bg-slate-50 border border-slate-100' %>">
                      <div>
                        <span class="text-sm font-medium text-slate-900"><%= ac.effective_display_name %></span>
                        <span class="text-xs text-slate-400 ml-1">(<%= ac.formatted_customer_id %>)</span>
                      </div>
                      <% if ac.active? %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[10px] font-semibold bg-emerald-100 text-emerald-700">Active</span>
                      <% else %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[10px] font-semibold bg-slate-200 text-slate-500">Inactive</span>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <p class="ml-11 text-xs text-slate-400">No accessible customers</p>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-6">
            <svg class="w-12 h-12 mx-auto text-slate-300 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
            </svg>
            <p class="text-sm font-medium text-slate-500">No Google account connected</p>
            <p class="text-xs text-slate-400 mt-1">This user hasn't connected a Google Ads account yet</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Activity Log -->
    <div class="bg-white rounded-xl border border-slate-200 shadow-sm">
      <div class="px-6 py-4 border-b border-slate-100 flex items-center justify-between">
        <h3 class="text-sm font-bold text-slate-900">Activity Log</h3>
        <span class="text-xs text-slate-400"><%= @user.activity_logs.count %> total</span>
      </div>
      <div class="divide-y divide-slate-100">
        <% if @activity_logs.any? %>
          <% @activity_logs.each do |log| %>
            <div class="px-6 py-3 hover:bg-slate-50 transition-colors">
              <div class="flex items-start justify-between gap-4">
                <div>
                  <p class="text-sm text-slate-900"><%= log.formatted_action %></p>
                  <p class="text-xs text-slate-500"><%= log.formatted_description %></p>
                </div>
                <span class="text-[11px] text-slate-400 whitespace-nowrap"><%= admin_time_ago(log.created_at) %></span>
              </div>
            </div>
          <% end %>

          <% if @pagy.pages > 1 %>
            <div class="px-6 py-3 flex justify-between items-center">
              <span class="text-xs text-slate-500">Page <%= @pagy.page %> of <%= @pagy.pages %></span>
              <div class="flex gap-1">
                <% if @pagy.prev %>
                  <%= link_to "← Prev", admin_user_path(@user, page: @pagy.prev), class: "px-2 py-1 rounded text-xs font-medium text-slate-600 bg-slate-100 hover:bg-slate-200" %>
                <% end %>
                <% if @pagy.next %>
                  <%= link_to "Next →", admin_user_path(@user, page: @pagy.next), class: "px-2 py-1 rounded text-xs font-medium text-slate-600 bg-slate-100 hover:bg-slate-200" %>
                <% end %>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="px-6 py-8 text-center">
            <p class="text-sm text-slate-500">No activity recorded for this user</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
