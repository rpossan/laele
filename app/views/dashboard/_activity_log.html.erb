<div class="space-y-6">
  <section class="rounded-2xl border border-slate-200 bg-gradient-to-br from-white to-slate-50 p-8 shadow-lg">
    <div class="flex items-center gap-3 mb-6">
      <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-gradient-to-br from-indigo-500 to-indigo-600 flex items-center justify-center">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
        </svg>
      </div>
      <div>
        <h2 class="text-2xl font-bold text-slate-900"><%= t('dashboard.activity_log') %></h2>
        <p class="text-sm text-slate-600"><%= t('dashboard.activity_log_description') %></p>
      </div>
    </div>

    <% if @activity_logs&.any? %>
      <div class="space-y-3">
        <% @activity_logs.each do |log| %>
          <div class="rounded-xl border border-slate-200 bg-white p-4 hover:border-indigo-200 hover:shadow-sm transition-all">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 mt-1">
                <% case log.action %>
                <% when ActivityLog::ACTIONS[:lead_feedback] %>
                  <div class="w-10 h-10 rounded-lg bg-emerald-100 flex items-center justify-center">
                    <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  </div>
                <% when ActivityLog::ACTIONS[:bulk_lead_feedback] %>
                  <div class="w-10 h-10 rounded-lg bg-emerald-100 flex items-center justify-center">
                    <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5-6l2 2-6 6-2-2"/>
                    </svg>
                  </div>
                <% when ActivityLog::ACTIONS[:account_switched] %>
                  <div class="w-10 h-10 rounded-lg bg-indigo-100 flex items-center justify-center">
                    <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
                    </svg>
                  </div>
                <% when ActivityLog::ACTIONS[:account_connected] %>
                  <div class="w-10 h-10 rounded-lg bg-blue-100 flex items-center justify-center">
                    <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
                    </svg>
                  </div>
                <% when ActivityLog::ACTIONS[:account_disconnected] %>
                  <div class="w-10 h-10 rounded-lg bg-rose-100 flex items-center justify-center">
                    <svg class="w-5 h-5 text-rose-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                  </div>
                <% when ActivityLog::ACTIONS[:leads_fetched] %>
                  <div class="w-10 h-10 rounded-lg bg-amber-100 flex items-center justify-center">
                    <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                    </svg>
                  </div>
                <% when ActivityLog::ACTIONS[:geo_targets_updated] %>
                  <div class="w-10 h-10 rounded-lg bg-purple-100 flex items-center justify-center">
                    <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                  </div>
                <% else %>
                  <div class="w-10 h-10 rounded-lg bg-slate-100 flex items-center justify-center">
                    <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  </div>
                <% end %>
              </div>
              <div class="flex-1 min-w-0">
                <div class="flex items-start justify-between gap-4">
                  <div class="flex-1">
                    <p class="text-sm font-semibold text-slate-900"><%= log.formatted_action %></p>
                    <p class="text-sm text-slate-600 mt-1"><%= log.formatted_description %></p>
                    <p class="text-xs text-slate-400 mt-2">
                      <%= time_ago_in_words(log.created_at) %> <%= t('common.ago') %>
                      <span class="mx-1">•</span>
                      <%= log.created_at.strftime("%d/%m/%Y #{t('common.at')} %H:%M") %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <% if defined?(@pagy) && @pagy %>
        <div class="mt-8 flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4 border-t border-slate-200 pt-6">
          <div class="flex flex-col sm:flex-row items-start sm:items-center gap-3">
            <div class="flex items-center gap-2 text-sm text-slate-600">
              <div class="flex items-center gap-1.5">
                <div class="w-2 h-2 bg-indigo-600 rounded-full"></div>
                <span class="font-medium"><%= t('dashboard.showing_activities', from: @pagy.from, to: @pagy.to, count: @pagy.count) %></span>
              </div>
            </div>
            <% if @pagy.count > 0 %>
              <div class="flex items-center gap-1.5 text-xs text-slate-400 bg-slate-50 px-2 py-1 rounded-full">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                </svg>
                <span><%= @pagy.pages %> páginas</span>
              </div>
            <% end %>
          </div>
          
          <% if @pagy.pages > 1 %>
            <nav class="flex items-center" id="activity-pagination" aria-label="Paginação do histórico de atividades">
              <div class="flex items-center bg-white rounded-lg shadow-sm border border-slate-200 overflow-hidden">
                <!-- Previous Button -->
                <% if @pagy.prev %>
                  <a href="#" 
                     class="group relative inline-flex items-center gap-2 px-3 py-2.5 text-sm font-medium text-slate-600 hover:bg-slate-50 hover:text-slate-900 transition-all duration-200 border-r border-slate-200" 
                     onclick="loadActivityPage(event); return false;" 
                     data-page="<%= @pagy.prev %>"
                     aria-label="Página anterior">
                    <svg class="w-4 h-4 transition-transform group-hover:-translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                    <span class="hidden sm:inline">Anterior</span>
                  </a>
                <% else %>
                  <span class="relative inline-flex items-center gap-2 px-3 py-2.5 text-sm font-medium text-slate-400 bg-slate-50 border-r border-slate-200 cursor-not-allowed">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                    <span class="hidden sm:inline">Anterior</span>
                  </span>
                <% end %>

                <!-- Page Numbers -->
                <div class="flex items-center">
                  <% @pagy.series.each_with_index do |item, index| %>
                    <% case item %>
                    <% when Integer %>
                      <% if item == @pagy.page %>
                        <span class="relative inline-flex items-center px-4 py-2.5 text-sm font-semibold text-white bg-indigo-600 shadow-sm ring-1 ring-indigo-600 focus:z-10"
                              aria-current="page"
                              aria-label="Página <%= item %>, atual">
                          <%= item %>
                        </span>
                      <% else %>
                        <a href="#" 
                           class="relative inline-flex items-center px-4 py-2.5 text-sm font-medium text-slate-700 hover:bg-slate-50 hover:text-slate-900 focus:z-10 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-inset transition-all duration-200" 
                           onclick="loadActivityPage(event); return false;" 
                           data-page="<%= item %>"
                           aria-label="Ir para página <%= item %>">
                          <%= item %>
                        </a>
                      <% end %>
                    <% when String %>
                      <% if item == 'gap' %>
                        <span class="relative inline-flex items-center px-4 py-2.5 text-sm font-medium text-slate-400" aria-hidden="true">
                          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 6a2 2 0 110-4 2 2 0 010 4zM12 14a2 2 0 110-4 2 2 0 010 4zM12 22a2 2 0 110-4 2 2 0 010 4z"/>
                          </svg>
                        </span>
                      <% end %>
                    <% end %>
                  <% end %>
                </div>

                <!-- Next Button -->
                <% if @pagy.next %>
                  <a href="#" 
                     class="group relative inline-flex items-center gap-2 px-3 py-2.5 text-sm font-medium text-slate-600 hover:bg-slate-50 hover:text-slate-900 transition-all duration-200 border-l border-slate-200" 
                     onclick="loadActivityPage(event); return false;" 
                     data-page="<%= @pagy.next %>"
                     aria-label="Próxima página">
                    <span class="hidden sm:inline">Próxima</span>
                    <svg class="w-4 h-4 transition-transform group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  </a>
                <% else %>
                  <span class="relative inline-flex items-center gap-2 px-3 py-2.5 text-sm font-medium text-slate-400 bg-slate-50 border-l border-slate-200 cursor-not-allowed">
                    <span class="hidden sm:inline">Próxima</span>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  </span>
                <% end %>
              </div>
            </nav>
          <% else %>
            <div class="flex items-center gap-2 text-sm text-slate-500 bg-slate-50 px-3 py-2 rounded-lg">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              <span>Página única</span>
            </div>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-slate-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
        </svg>
        <p class="text-sm font-medium text-slate-500">
          <%= t('dashboard.no_activity') %>
        </p>
      </div>
    <% end %>
  </section>
</div>

