<section class="rounded-2xl border border-slate-200 bg-gradient-to-br from-white to-slate-50 p-8 shadow-lg" data-controller="leads" data-leads-target="container">
  <div class="flex items-center gap-3 mb-6">
    <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-gradient-to-br from-indigo-500 to-indigo-600 flex items-center justify-center">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
      </svg>
    </div>
    <div>
      <h2 class="text-2xl font-bold text-slate-900">Filtros de Leads</h2>
      <p class="text-sm text-slate-600">Configure os filtros e busque seus leads</p>
    </div>
  </div>
  
  <div class="bg-slate-50 rounded-xl p-6 mb-6">
    <div class="space-y-6">
      <!-- Período (único) -->
      <div>
        <label class="block text-xs font-bold uppercase tracking-wide text-slate-500 mb-2">Período</label>
        <select data-leads-target="period" class="w-full rounded-xl border-2 border-slate-300 bg-white px-4 py-3 text-sm font-semibold text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 transition-all shadow-sm">
          <option value="this_week">Esta semana</option>
          <option value="last_week">Semana passada</option>
          <option value="this_month">Este mês</option>
          <option value="last_month">Mês passado</option>
          <option value="last_30_days" selected>Últimos 30 dias</option>
          <option value="all_time">Tudo</option>
          <option value="custom">Customizado</option>
        </select>
      </div>

      <!-- Charge Status (múltiplo) -->
      <div>
        <label class="block text-xs font-bold uppercase tracking-wide text-slate-500 mb-3">Charge Status</label>
        <div class="flex flex-wrap gap-2" data-leads-target="chargeStatusContainer">
          <label class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border-2 border-slate-200 bg-white text-sm font-semibold text-slate-700 cursor-pointer hover:border-indigo-300 hover:bg-indigo-50 transition-all charge-status-filter" data-value="charged">
            <input type="checkbox" value="charged" class="sr-only charge-status-checkbox" data-leads-target="chargeStatus">
            <svg class="w-4 h-4 text-emerald-600 check-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <span>Charged</span>
          </label>
          <label class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border-2 border-slate-200 bg-white text-sm font-semibold text-slate-700 cursor-pointer hover:border-indigo-300 hover:bg-indigo-50 transition-all charge-status-filter" data-value="credited">
            <input type="checkbox" value="credited" class="sr-only charge-status-checkbox" data-leads-target="chargeStatus">
            <svg class="w-4 h-4 text-blue-600 check-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <span>Credited</span>
          </label>
          <label class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border-2 border-slate-200 bg-white text-sm font-semibold text-slate-700 cursor-pointer hover:border-indigo-300 hover:bg-indigo-50 transition-all charge-status-filter" data-value="in_review">
            <input type="checkbox" value="in_review" class="sr-only charge-status-checkbox" data-leads-target="chargeStatus">
            <svg class="w-4 h-4 text-amber-600 check-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <span>In Review</span>
          </label>
          <label class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border-2 border-slate-200 bg-white text-sm font-semibold text-slate-700 cursor-pointer hover:border-indigo-300 hover:bg-indigo-50 transition-all charge-status-filter" data-value="rejected">
            <input type="checkbox" value="rejected" class="sr-only charge-status-checkbox" data-leads-target="chargeStatus">
            <svg class="w-4 h-4 text-rose-600 check-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <span>Rejected</span>
          </label>
          <label class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border-2 border-slate-200 bg-white text-sm font-semibold text-slate-700 cursor-pointer hover:border-indigo-300 hover:bg-indigo-50 transition-all charge-status-filter" data-value="not_charged">
            <input type="checkbox" value="not_charged" class="sr-only charge-status-checkbox" data-leads-target="chargeStatus">
            <svg class="w-4 h-4 text-slate-600 check-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <span>Not Charged</span>
          </label>
        </div>
      </div>

      <!-- Feedback Status (múltiplo) -->
      <div>
        <label class="block text-xs font-bold uppercase tracking-wide text-slate-500 mb-3">Feedback</label>
        <div class="flex flex-wrap gap-2" data-leads-target="feedbackStatusContainer">
          <label class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border-2 border-slate-200 bg-white text-sm font-semibold text-slate-700 cursor-pointer hover:border-indigo-300 hover:bg-indigo-50 transition-all feedback-status-filter" data-value="with_feedback">
            <input type="checkbox" value="with_feedback" class="sr-only feedback-status-checkbox" data-leads-target="feedbackStatus">
            <svg class="w-4 h-4 text-emerald-600 check-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <span>Com feedback</span>
          </label>
          <label class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border-2 border-slate-200 bg-white text-sm font-semibold text-slate-700 cursor-pointer hover:border-indigo-300 hover:bg-indigo-50 transition-all feedback-status-filter" data-value="without_feedback">
            <input type="checkbox" value="without_feedback" class="sr-only feedback-status-checkbox" data-leads-target="feedbackStatus">
            <svg class="w-4 h-4 text-amber-600 check-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <span>Sem feedback</span>
          </label>
        </div>
      </div>

      <div class="flex items-center justify-between">
        <div data-leads-target="lastSync" class="text-sm text-slate-500">
          <span class="font-medium">Última sincronização:</span>
          <span class="ml-1" id="last-sync-time">Nunca</span>
        </div>
        <button type="button"
                id="fetch-leads-btn"
                data-action="click->leads#fetch"
                class="inline-flex items-center gap-2 rounded-xl bg-indigo-600 hover:bg-indigo-700 px-6 py-3.5 text-sm font-semibold text-white shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-0.5">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
          </svg>
          <span>Atualizar tabela</span>
        </button>
      </div>
    </div>
  </div>

  <!-- Bulk Action Bar -->
  <div data-leads-target="bulkActionBar" class="hidden mb-4 rounded-xl border border-indigo-200 bg-indigo-50 p-4 shadow-sm">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <span class="text-sm font-semibold text-indigo-900">
          <span class="selected-count">0</span> leads selecionados
        </span>
      </div>
      <button 
        type="button"
        onclick="if (window.leadsController) { window.leadsController.openBulkFeedbackModal(); }"
        class="inline-flex items-center gap-2 rounded-lg bg-indigo-600 hover:bg-indigo-700 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:shadow-md transition-all">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        Avaliar selecionados
      </button>
    </div>
  </div>

  <div class="overflow-x-auto rounded-xl border border-slate-200 bg-white shadow-sm">
    <table class="min-w-full text-left text-sm">
      <thead class="bg-slate-50 border-b-2 border-slate-200">
        <tr>
          <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-700">
            <input 
              type="checkbox" 
              id="select-all-leads"
              class="w-4 h-4 text-indigo-600 border-slate-300 rounded focus:ring-indigo-500"
              title="Selecionar todos"
            >
          </th>
          <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-700">Tipo</th>
          <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-700">Contato</th>
          <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-700">Status</th>
          <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-700">Cobrança</th>
          <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-700">Feedback</th>
          <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-700">Criado em</th>
        </tr>
      </thead>
      <tbody data-leads-target="tableBody" class="divide-y divide-slate-100 bg-white">
        <tr>
          <td class="px-6 py-8 text-center text-sm text-slate-500" colspan="7">
            <% if @active_selection.present? %>
              <div class="flex flex-col items-center gap-2">
                <svg class="w-12 h-12 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                <p class="font-medium">Clique em "Atualizar tabela" para buscar os leads desta conta.</p>
              </div>
            <% else %>
              <div class="flex flex-col items-center gap-2">
                <svg class="w-12 h-12 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                <p class="font-medium">Conecte sua conta e selecione uma conta ativa antes de buscar leads.</p>
              </div>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</section>

<!-- Feedback Modal -->
<div id="feedback-modal" class="fixed inset-0 z-50 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true" style="display: none;">
  <div class="fixed inset-0 bg-slate-900/50 backdrop-blur-sm" onclick="closeFeedbackModal()" style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; z-index: 1;"></div>

  <div id="feedback-modal-panel" class="rounded-2xl border border-slate-200 bg-white text-left shadow-2xl" style="position: fixed !important; top: 50% !important; left: 50% !important; transform: translate(-50%, -50%) !important; width: 90% !important; max-width: 32rem !important; max-height: 90vh !important; overflow-y: auto !important; z-index: 10 !important; margin: 0 !important; right: auto !important; bottom: auto !important;">
    <div class="px-6 pt-6 pb-4">
      <div class="mb-4 flex items-center justify-between">
        <h3 class="text-xl font-semibold text-slate-900" id="modal-title">Submeter Feedback</h3>
        <button onclick="closeFeedbackModal()" class="text-slate-500 hover:text-slate-900 transition">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <form id="feedback-form" onsubmit="handleFeedbackSubmit(event)">
        <input type="hidden" id="feedback-lead-id" name="lead_id">
        <input type="hidden" id="feedback-lead-ids" name="lead_ids">
        <div id="bulk-feedback-info" class="hidden mb-4 rounded-lg border border-indigo-200 bg-indigo-50 p-3">
          <p class="text-sm text-indigo-900">
            <strong id="bulk-lead-count">0</strong> leads serão avaliados com a mesma configuração.
          </p>
        </div>

        <div class="mb-6">
          <label class="mb-3 block text-sm font-medium text-slate-700">Como você avalia este lead?</label>
          <div class="space-y-2">
            <label class="flex items-center rounded-lg border border-slate-200 p-3 hover:bg-slate-50 cursor-pointer transition">
              <input type="radio" name="survey_answer" value="VERY_SATISFIED" class="mr-3 text-emerald-500 focus:ring-emerald-500" required>
              <span class="text-slate-900">Muito Satisfeito</span>
            </label>
            <label class="flex items-center rounded-lg border border-slate-200 p-3 hover:bg-slate-50 cursor-pointer transition">
              <input type="radio" name="survey_answer" value="SATISFIED" class="mr-3 text-emerald-500 focus:ring-emerald-500" required>
              <span class="text-slate-900">Satisfeito</span>
            </label>
            <label class="flex items-center rounded-lg border border-slate-200 p-3 hover:bg-slate-50 cursor-pointer transition">
              <input type="radio" name="survey_answer" value="DISSATISFIED" class="mr-3 text-amber-500 focus:ring-amber-500" required>
              <span class="text-slate-900">Insatisfeito</span>
            </label>
            <label class="flex items-center rounded-lg border border-slate-200 p-3 hover:bg-slate-50 cursor-pointer transition">
              <input type="radio" name="survey_answer" value="VERY_DISSATISFIED" class="mr-3 text-rose-500 focus:ring-rose-500" required>
              <span class="text-slate-900">Muito Insatisfeito</span>
            </label>
          </div>
        </div>

        <div id="reason-section" class="mb-6 hidden">
          <label class="mb-2 block text-sm font-medium text-slate-700" id="reason-label">Motivo</label>
          <select id="feedback-reason" name="reason" class="w-full rounded-lg border border-slate-200 bg-white px-4 py-2 text-sm text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200">
            <option value="">Selecione um motivo (opcional)</option>
          </select>
        </div>

        <div id="other-reason-section" class="mb-6 hidden">
          <label class="mb-2 block text-sm font-medium text-slate-700">Comentário adicional</label>
          <textarea 
            id="other-reason-comment" 
            name="other_reason_comment" 
            rows="3" 
            class="w-full rounded-lg border border-slate-200 bg-white px-4 py-2 text-sm text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200"
            placeholder="Descreva o motivo (opcional)"></textarea>
        </div>

        <div class="flex items-center justify-end gap-3 border-t border-slate-200 pt-4">
          <button 
            type="button" 
            onclick="closeFeedbackModal()" 
            class="rounded-lg border border-slate-200 px-4 py-2 text-sm font-medium text-slate-600 hover:text-slate-900 hover:border-slate-300 transition">
            Cancelar
          </button>
          <button 
            type="submit" 
            id="submit-feedback-btn"
            class="rounded-lg bg-indigo-600 px-6 py-2 text-sm font-semibold text-white hover:bg-indigo-700 transition">
            Enviar Feedback
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

