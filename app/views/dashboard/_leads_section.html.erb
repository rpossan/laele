<section class="rounded-2xl border border-slate-200 bg-gradient-to-br from-white to-slate-50 p-8 shadow-lg" data-controller="leads" data-leads-target="container">
  <script>
    // Clear leads cache when account changes or disconnects
    (function() {
      const currentCustomerId = '<%= @active_selection&.customer_id %>';
      const savedCustomerId = localStorage.getItem('leads_current_customer_id');
      
      // If no active selection (disconnected), clear cache
      if (!currentCustomerId) {
        console.log('ðŸ”„ No active account, clearing leads cache');
        localStorage.removeItem('leads_filters');
        localStorage.removeItem('leads_data');
        localStorage.removeItem('leads_last_sync');
        localStorage.removeItem('leads_current_customer_id');
      }
      // If account changed, clear cache
      else if (currentCustomerId !== savedCustomerId) {
        console.log('ðŸ”„ Account changed, clearing leads cache');
        localStorage.removeItem('leads_filters');
        localStorage.removeItem('leads_data');
        localStorage.removeItem('leads_last_sync');
        localStorage.setItem('leads_current_customer_id', currentCustomerId);
      } 
      // Save current customer ID for next check
      else if (currentCustomerId) {
        localStorage.setItem('leads_current_customer_id', currentCustomerId);
      }
    })();
  </script>
