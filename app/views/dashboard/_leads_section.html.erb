<section class="rounded-2xl border border-slate-200 bg-gradient-to-br from-white to-slate-50 p-8 shadow-lg" data-controller="leads" data-leads-target="container">
  <div class="flex items-center gap-3 mb-6">
    <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-gradient-to-br from-indigo-500 to-indigo-600 flex items-center justify-center">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
      </svg>
    </div>
    <div>
      <h2 class="text-2xl font-bold text-slate-900"><%= t('leads.filters') %></h2>
      <p class="text-sm text-slate-600"><%= t('leads.filters_description') %></p>
    </div>
  </div>

  <!-- Account Selector -->
  <% all_customers = (@google_accounts || []).flat_map(&:accessible_customers) %>
  <div class="bg-white rounded-xl border-2 border-slate-200 p-6 mb-6 shadow-sm">
    <div class="flex items-center justify-between mb-4">
      <div>
        <p class="text-xs font-bold text-slate-500 uppercase tracking-wide mb-1"><%= t('account.select_account_title') %></p>
        <p class="text-sm text-slate-600"><%= t('account.select_account_description') %></p>
      </div>
      <button 
        onclick="openAccountSwitcherModal()" 
        class="inline-flex items-center gap-2 rounded-lg border border-indigo-200 bg-indigo-50 px-4 py-2 text-sm font-semibold text-indigo-700 hover:border-indigo-300 hover:bg-indigo-100 transition-all">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
        </svg>
        <span><%= t('account.switch') %></span>
      </button>
    </div>
    
    <% if @active_selection.present? %>
      <% selected_customer = all_customers.find { |c| c.customer_id == @active_selection.customer_id } %>
      <div class="flex items-center gap-4 rounded-xl border-2 border-indigo-200 bg-gradient-to-br from-indigo-50 to-white p-4">
        <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-gradient-to-br from-indigo-500 to-indigo-600 flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="flex-1">
          <p class="text-xs font-bold uppercase tracking-wide text-slate-500 mb-1"><%= t('account.active') %></p>
          <p class="text-lg font-bold text-slate-900">
            <%= format_customer_id(@active_selection.customer_id) %>
          </p>
          <% if selected_customer&.display_name.present? %>
            <p class="text-sm text-slate-600"><%= selected_customer.display_name %></p>
          <% end %>
        </div>
        <span class="rounded-full bg-emerald-100 px-3 py-1.5 text-xs font-bold text-emerald-700 uppercase tracking-wide">
          <%= t('account.active') %>
        </span>
      </div>
    <% else %>
      <div class="text-center py-8 rounded-xl border-2 border-dashed border-slate-300 bg-slate-50">
        <svg class="mx-auto h-10 w-10 text-slate-400 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
        <p class="text-sm font-medium text-slate-600 mb-2"><%= t('account.no_account_selected') %></p>
        <button 
          onclick="openAccountSwitcherModal()" 
          class="inline-flex items-center gap-2 rounded-lg bg-indigo-600 hover:bg-indigo-700 px-4 py-2 text-sm font-semibold text-white transition-all">
          <span><%= t('account.select_account') %></span>
        </button>
      </div>
    <% end %>
  </div>
  
  <div class="bg-slate-50 rounded-xl p-6 mb-6">
    <div class="space-y-6">
      <!-- Período (único) -->
      <div>
        <label class="block text-xs font-bold uppercase tracking-wide text-slate-500 mb-2"><%= t('leads.period') %></label>
        <select data-leads-target="period" data-action="change->leads#handlePeriodChange" class="w-full rounded-xl border-2 border-slate-300 bg-white px-4 py-3 text-sm font-semibold text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 transition-all shadow-sm">
          <option value="this_week"><%= t('leads.this_week') %></option>
          <option value="last_week"><%= t('leads.last_week') %></option>
          <option value="this_month"><%= t('leads.this_month') %></option>
          <option value="last_month"><%= t('leads.last_month') %></option>
          <option value="last_30_days" selected><%= t('leads.last_30_days') %></option>
          <option value="all_time"><%= t('leads.all_time') %></option>
          <option value="custom"><%= t('leads.custom') %></option>
        </select>
      </div>

      <!-- Custom Date Range (hidden by default) -->
      <div id="custom-date-range" data-leads-target="customDateRange" class="hidden">
        <label class="block text-xs font-bold uppercase tracking-wide text-slate-500 mb-3"><%= t('leads.custom_date_range') %></label>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-xs font-medium text-slate-600 mb-2"><%= t('leads.start_date') %></label>
            <input 
              type="date" 
              data-leads-target="startDate"
              class="w-full rounded-lg border-2 border-slate-300 bg-white px-4 py-2.5 text-sm text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 transition-all shadow-sm"
              max="<%= Date.current.strftime('%Y-%m-%d') %>"
            >
          </div>
          <div>
            <label class="block text-xs font-medium text-slate-600 mb-2"><%= t('leads.end_date') %></label>
            <input 
              type="date" 
              data-leads-target="endDate"
              class="w-full rounded-lg border-2 border-slate-300 bg-white px-4 py-2.5 text-sm text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 transition-all shadow-sm"
              max="<%= Date.current.strftime('%Y-%m-%d') %>"
            >
          </div>
        </div>
        <div class="mt-2 text-xs text-slate-500">
          <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <%= t('leads.custom_date_help') %>
        </div>
      </div>

      <!-- Charge Status (múltiplo) -->
      <div>
        <label class="block text-xs font-bold uppercase tracking-wide text-slate-500 mb-3"><%= t('leads.charge_status') %></label>
        <div class="flex flex-wrap gap-2" data-leads-target="chargeStatusContainer">
          <label class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border-2 border-slate-200 bg-white text-sm font-semibold text-slate-700 cursor-pointer hover:border-indigo-300 hover:bg-indigo-50 transition-all charge-status-filter" data-value="charged">
            <input type="checkbox" value="charged" class="sr-only charge-status-checkbox" data-leads-target="chargeStatus">
            <svg class="w-4 h-4 text-emerald-600 check-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <span><%= t('leads.charged') %></span>
          </label>
          <label class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border-2 border-slate-200 bg-white text-sm font-semibold text-slate-700 cursor-pointer hover:border-indigo-300 hover:bg-indigo-50 transition-all charge-status-filter" data-value="credited">
            <input type="checkbox" value="credited" class="sr-only charge-status-checkbox" data-leads-target="chargeStatus">
            <svg class="w-4 h-4 text-blue-600 check-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <span><%= t('leads.credited') %></span>
          </label>
          <label class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border-2 border-slate-200 bg-white text-sm font-semibold text-slate-700 cursor-pointer hover:border-indigo-300 hover:bg-indigo-50 transition-all charge-status-filter" data-value="in_review">
            <input type="checkbox" value="in_review" class="sr-only charge-status-checkbox" data-leads-target="chargeStatus">
            <svg class="w-4 h-4 text-amber-600 check-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <span><%= t('leads.in_review') %></span>
          </label>
          <label class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border-2 border-slate-200 bg-white text-sm font-semibold text-slate-700 cursor-pointer hover:border-indigo-300 hover:bg-indigo-50 transition-all charge-status-filter" data-value="rejected">
            <input type="checkbox" value="rejected" class="sr-only charge-status-checkbox" data-leads-target="chargeStatus">
            <svg class="w-4 h-4 text-rose-600 check-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <span><%= t('leads.rejected') %></span>
          </label>
          <label class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border-2 border-slate-200 bg-white text-sm font-semibold text-slate-700 cursor-pointer hover:border-indigo-300 hover:bg-indigo-50 transition-all charge-status-filter" data-value="not_charged">
            <input type="checkbox" value="not_charged" class="sr-only charge-status-checkbox" data-leads-target="chargeStatus">
            <svg class="w-4 h-4 text-slate-600 check-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <span><%= t('leads.not_charged') %></span>
          </label>
        </div>
      </div>

      <!-- Feedback Status (múltiplo) -->
      <div>
        <label class="block text-xs font-bold uppercase tracking-wide text-slate-500 mb-3"><%= t('leads.feedback') %></label>
        <div class="flex flex-wrap gap-2" data-leads-target="feedbackStatusContainer">
          <label class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border-2 border-slate-200 bg-white text-sm font-semibold text-slate-700 cursor-pointer hover:border-indigo-300 hover:bg-indigo-50 transition-all feedback-status-filter" data-value="with_feedback">
            <input type="checkbox" value="with_feedback" class="sr-only feedback-status-checkbox" data-leads-target="feedbackStatus">
            <svg class="w-4 h-4 text-emerald-600 check-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <span><%= t('leads.with_feedback') %></span>
          </label>
          <label class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border-2 border-slate-200 bg-white text-sm font-semibold text-slate-700 cursor-pointer hover:border-indigo-300 hover:bg-indigo-50 transition-all feedback-status-filter" data-value="without_feedback">
            <input type="checkbox" value="without_feedback" class="sr-only feedback-status-checkbox" data-leads-target="feedbackStatus">
            <svg class="w-4 h-4 text-amber-600 check-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <span><%= t('leads.without_feedback') %></span>
          </label>
        </div>
      </div>

      <div class="flex items-center justify-between">
        <div data-leads-target="lastSync" class="text-sm text-slate-500">
          <span class="font-medium"><%= t('leads.last_sync') %></span>
          <span class="ml-1" id="last-sync-time"><%= t('common.never') %></span>
        </div>
        <button type="button"
                id="fetch-leads-btn"
                data-action="click->leads#fetch"
                class="inline-flex items-center gap-2 rounded-xl bg-indigo-600 hover:bg-indigo-700 px-6 py-3.5 text-sm font-semibold text-white shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-0.5">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
          </svg>
          <span><%= t('leads.update_table') %></span>
        </button>
      </div>
    </div>
  </div>

  <!-- Bulk Action Bar -->
  <div data-leads-target="bulkActionBar" class="hidden mb-4 rounded-xl border border-indigo-200 bg-indigo-50 p-4 shadow-sm">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <span class="text-sm font-semibold text-indigo-900">
          <span class="selected-count">0</span> <%= t('leads.selected') %>
        </span>
      </div>
      <button 
        type="button"
        onclick="if (window.leadsController) { window.leadsController.openBulkFeedbackModal(); }"
        class="inline-flex items-center gap-2 rounded-lg bg-indigo-600 hover:bg-indigo-700 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:shadow-md transition-all">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <%= t('leads.evaluate_selected') %>
      </button>
    </div>
  </div>

  <div class="overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm">
    <div class="overflow-x-auto">
      <table class="min-w-full text-left text-sm">
        <thead class="bg-slate-50 border-b-2 border-slate-200">
          <tr>
            <th class="px-4 py-4 text-xs font-bold uppercase tracking-wider text-slate-700 w-12">
              <input 
                type="checkbox" 
                id="select-all-leads"
                class="w-4 h-4 text-indigo-600 border-slate-300 rounded focus:ring-indigo-500"
                title="<%= t('leads.select_all') %>"
              >
            </th>
            <th class="px-4 py-4 text-xs font-bold uppercase tracking-wider text-slate-700 w-32">ID</th>
            <th class="px-4 py-4 text-xs font-bold uppercase tracking-wider text-slate-700 w-24"><%= t('leads.type') %></th>
            <th class="px-4 py-4 text-xs font-bold uppercase tracking-wider text-slate-700 min-w-[140px]"><%= t('leads.name') %></th>
            <th class="px-4 py-4 text-xs font-bold uppercase tracking-wider text-slate-700 w-32"><%= t('leads.phone') %></th>
            <th class="px-4 py-4 text-xs font-bold uppercase tracking-wider text-slate-700 w-24"><%= t('leads.status') %></th>
            <th class="px-4 py-4 text-xs font-bold uppercase tracking-wider text-slate-700 w-24"><%= t('leads.charge') %></th>
            <th class="px-4 py-4 text-xs font-bold uppercase tracking-wider text-slate-700 w-32"><%= t('leads.feedback') %></th>
            <th class="px-4 py-4 text-xs font-bold uppercase tracking-wider text-slate-700 w-32"><%= t('leads.created_at') %></th>
          </tr>
        </thead>
        <tbody data-leads-target="tableBody" class="divide-y divide-slate-100 bg-white">
          <tr>
            <td class="px-4 py-8 text-center text-sm text-slate-500" colspan="9">
            <% if @active_selection.present? %>
              <div class="flex flex-col items-center gap-2">
                <svg class="w-12 h-12 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                <p class="font-medium"><%= t('leads.click_to_fetch') %></p>
              </div>
            <% else %>
              <div class="flex flex-col items-center gap-2">
                <svg class="w-12 h-12 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                <p class="font-medium"><%= t('leads.connect_and_select') %></p>
              </div>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    </div>
  </div>

  <!-- Pagination Container -->
  <div data-leads-target="paginationContainer" class="hidden mt-6">
    <div class="flex items-center justify-between">
      <div class="text-sm text-slate-600">
        <span data-leads-target="paginationInfo">Mostrando 0 de 0 leads</span>
      </div>
      <div data-leads-target="paginationNav" class="flex items-center gap-2">
        <!-- Pagination buttons will be inserted here by JavaScript -->
      </div>
    </div>
  </div>
</section>

<!-- Feedback Modal -->
<div id="feedback-modal" class="fixed inset-0 z-50 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true" style="display: none;">
  <div class="fixed inset-0 bg-slate-900/50 backdrop-blur-sm" onclick="closeFeedbackModal()" style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; z-index: 1;"></div>

  <div id="feedback-modal-panel" class="rounded-2xl border border-slate-200 bg-white text-left shadow-2xl" style="position: fixed !important; top: 50% !important; left: 50% !important; transform: translate(-50%, -50%) !important; width: 90% !important; max-width: 32rem !important; max-height: 90vh !important; overflow-y: auto !important; z-index: 10 !important; margin: 0 !important; right: auto !important; bottom: auto !important;">
    <div class="px-6 pt-6 pb-4">
      <div class="mb-4 flex items-center justify-between">
        <h3 class="text-xl font-semibold text-slate-900" id="modal-title"><%= t('leads.submit_feedback') %></h3>
        <button onclick="closeFeedbackModal()" class="text-slate-500 hover:text-slate-900 transition">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <form id="feedback-form" onsubmit="handleFeedbackSubmit(event)">
        <input type="hidden" id="feedback-lead-id" name="lead_id">
        <input type="hidden" id="feedback-lead-ids" name="lead_ids">
        <div id="bulk-feedback-info" class="hidden mb-4 rounded-lg border border-indigo-200 bg-indigo-50 p-3">
          <p class="text-sm text-indigo-900">
            <strong id="bulk-lead-count">0</strong> <%= t('leads.leads_will_be_evaluated') %>
          </p>
        </div>

        <div class="mb-6">
          <label class="mb-3 block text-sm font-medium text-slate-700"><%= t('leads.how_do_you_rate') %></label>
          <div class="space-y-2">
            <label class="flex items-center rounded-lg border border-slate-200 p-3 hover:bg-slate-50 cursor-pointer transition">
              <input type="radio" name="survey_answer" value="VERY_SATISFIED" class="mr-3 text-emerald-500 focus:ring-emerald-500" required>
              <span class="text-slate-900"><%= t('leads.very_satisfied') %></span>
            </label>
            <label class="flex items-center rounded-lg border border-slate-200 p-3 hover:bg-slate-50 cursor-pointer transition">
              <input type="radio" name="survey_answer" value="SATISFIED" class="mr-3 text-emerald-500 focus:ring-emerald-500" required>
              <span class="text-slate-900"><%= t('leads.satisfied') %></span>
            </label>
            <label class="flex items-center rounded-lg border border-slate-200 p-3 hover:bg-slate-50 cursor-pointer transition">
              <input type="radio" name="survey_answer" value="DISSATISFIED" class="mr-3 text-amber-500 focus:ring-amber-500" required>
              <span class="text-slate-900"><%= t('leads.dissatisfied') %></span>
            </label>
            <label class="flex items-center rounded-lg border border-slate-200 p-3 hover:bg-slate-50 cursor-pointer transition">
              <input type="radio" name="survey_answer" value="VERY_DISSATISFIED" class="mr-3 text-rose-500 focus:ring-rose-500" required>
              <span class="text-slate-900"><%= t('leads.very_dissatisfied') %></span>
            </label>
          </div>
        </div>

        <div id="reason-section" class="mb-6 hidden">
          <label class="mb-2 block text-sm font-medium text-slate-700" id="reason-label"><%= t('leads.reason') %></label>
          <select id="feedback-reason" name="reason" class="w-full rounded-lg border border-slate-200 bg-white px-4 py-2 text-sm text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200">
            <option value=""><%= t('leads.select_reason_optional') %></option>
          </select>
        </div>

        <div id="other-reason-section" class="mb-6 hidden">
          <label class="mb-2 block text-sm font-medium text-slate-700"><%= t('leads.additional_comment') %></label>
          <textarea 
            id="other-reason-comment" 
            name="other_reason_comment" 
            rows="3" 
            class="w-full rounded-lg border border-slate-200 bg-white px-4 py-2 text-sm text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200"
            placeholder="<%= t('leads.describe_reason') %>"></textarea>
        </div>

        <div class="flex items-center justify-end gap-3 border-t border-slate-200 pt-4">
          <button 
            type="button" 
            onclick="closeFeedbackModal()" 
            class="rounded-lg border border-slate-200 px-4 py-2 text-sm font-medium text-slate-600 hover:text-slate-900 hover:border-slate-300 transition">
            <%= t('common.cancel') %>
          </button>
          <button 
            type="submit" 
            id="submit-feedback-btn"
            class="rounded-lg bg-indigo-600 px-6 py-2 text-sm font-semibold text-white hover:bg-indigo-700 transition">
            <%= t('leads.send_feedback') %>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

