<% all_customers = (@google_accounts || []).flat_map(&:accessible_customers) %>

<div class="space-y-6">
  <!-- Tabs Navigation -->
  <div class="border-b border-slate-200">
    <nav class="flex space-x-8" aria-label="Tabs">
      <button 
        id="tab-dashboard" 
        class="tab-button <%= current_page?(dashboard_path) && !current_page?(leads_path) ? 'active border-b-2 border-indigo-600 text-indigo-600' : 'border-b-2 border-transparent text-slate-500 hover:text-slate-700 hover:border-slate-300' %> py-4 px-1 text-sm font-semibold transition-colors"
        onclick="switchTab('dashboard')">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
          <span><%= t('navigation.dashboard') %></span>
        </div>
      </button>
      <button 
        id="tab-account" 
        class="tab-button border-b-2 border-transparent text-slate-500 hover:text-slate-700 hover:border-slate-300 py-4 px-1 text-sm font-semibold transition-colors"
        onclick="switchTab('account')">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
          </svg>
          <span><%= t('navigation.account') %></span>
        </div>
      </button>
      <button 
        id="tab-leads" 
        class="tab-button <%= current_page?(leads_path) ? 'active border-b-2 border-indigo-600 text-indigo-600' : 'border-b-2 border-transparent text-slate-500 hover:text-slate-700 hover:border-slate-300' %> py-4 px-1 text-sm font-semibold transition-colors"
        onclick="switchTab('leads')">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          <span><%= t('navigation.leads') %></span>
        </div>
      </button>
      <button 
        id="tab-campaigns" 
        class="tab-button border-b-2 border-transparent text-slate-500 hover:text-slate-700 hover:border-slate-300 py-4 px-1 text-sm font-semibold transition-colors"
        onclick="switchTab('campaigns')">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          <span><%= t('navigation.campaigns') %></span>
        </div>
      </button>
    </nav>
  </div>

  <!-- Tab Content: Dashboard -->
  <div id="content-dashboard" class="tab-content <%= current_page?(leads_path) ? 'hidden' : '' %>">
    <%= render partial: 'dashboard/activity_log' %>
  </div>

  <!-- Tab Content: Account -->
  <div id="content-account" class="tab-content hidden">
    <%= render partial: 'dashboard/account_tab' %>
  </div>

  <!-- Tab Content: Leads -->
  <div id="content-leads" class="tab-content <%= current_page?(dashboard_path) ? 'hidden' : '' %>">
    <%= render partial: 'dashboard/leads_section' %>
  </div>

  <!-- Tab Content: Campaigns -->
  <div id="content-campaigns" class="tab-content hidden">
    <%= render partial: 'dashboard/campaigns_section' %>
  </div>
</div>

<!-- Account Switcher Modal -->
<div id="account-switcher-modal" class="fixed inset-0 z-50 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="fixed inset-0 bg-slate-900/50 backdrop-blur-sm" onclick="closeAccountSwitcherModal()"></div>
  <div class="fixed inset-0 flex items-center justify-center p-4">
    <div class="relative w-full max-w-2xl rounded-2xl border border-slate-200 bg-white shadow-2xl overflow-hidden">
      <!-- Header -->
      <div class="bg-gradient-to-r from-indigo-600 to-indigo-700 px-6 py-6">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-2xl font-bold text-white" id="modal-title"><%= t('account.switch_account') %></h3>
            <p class="mt-1 text-indigo-100"><%= t('account.switch_description') %></p>
          </div>
          <button onclick="closeAccountSwitcherModal()" class="text-indigo-200 hover:text-white transition">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Content -->
      <div class="px-6 py-6">
        <div class="mb-6">
          <label class="block text-sm font-semibold text-slate-700 mb-3"><%= t('account.managed_account') %></label>
          <select id="modal-customer-select" class="w-full appearance-none rounded-xl border-2 border-slate-300 bg-white px-4 py-3.5 text-sm font-semibold text-slate-900 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200 transition-all">
            <option value=""><%= t('account.select_account') %></option>
            <% if all_customers.any? %>
              <% all_customers.each do |customer| %>
                <option value="<%= customer.customer_id %>"
                        data-google-account-id="<%= customer.google_account_id %>"
                        <%= "selected" if @active_selection&.customer_id == customer.customer_id %>>
                  <%= format_customer_id(customer.customer_id) %> — <%= customer.effective_display_name %>
                </option>
              <% end %>
            <% end %>
          </select>
          <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-4 mt-3">
            <svg class="h-5 w-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </div>
        </div>

        <div class="mb-4 flex justify-end">
          <button id="modal-fetch-names-btn" class="inline-flex items-center gap-2 rounded-lg border border-amber-200 bg-amber-50 px-4 py-2 text-sm font-semibold text-amber-700 hover:text-amber-900 hover:border-amber-300 hover:bg-amber-100 transition-all">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
            </svg>
            <span>Busca inteligente</span>
          </button>
        </div>
      </div>

      <!-- Footer -->
      <div class="flex items-center justify-end gap-3 border-t border-slate-200 bg-slate-50 px-6 py-4">
        <button 
          type="button" 
          onclick="closeAccountSwitcherModal()" 
          class="rounded-lg border border-slate-200 px-4 py-2 text-sm font-medium text-slate-600 hover:text-slate-900 hover:border-slate-300 transition">
          <%= t('common.cancel') %>
        </button>
        <button 
          type="button" 
          id="modal-save-btn"
          onclick="saveAccountSelection()" 
          class="rounded-lg bg-indigo-600 px-6 py-2 text-sm font-semibold text-white hover:bg-indigo-700 transition">
            <%= t('common.save') %>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Notification helpers using SweetAlert2
  window.showSuccess = function(message, title) {
    title = title || (window.I18n && window.I18n.messages ? window.I18n.messages.success : 'Success!');
    Swal.fire({
      icon: 'success',
      title: title,
      text: message,
      confirmButtonColor: '#4f46e5',
      confirmButtonText: window.I18n && window.I18n.messages ? window.I18n.messages.ok : 'OK',
      timer: 3000,
      timerProgressBar: true
    });
  };

  window.showError = function(message, title) {
    title = title || (window.I18n && window.I18n.messages ? window.I18n.messages.error : 'Error!');
    Swal.fire({
      icon: 'error',
      title: title,
      text: message,
      confirmButtonColor: '#ef4444',
      confirmButtonText: window.I18n && window.I18n.messages ? window.I18n.messages.ok : 'OK'
    });
  };

  window.showInfo = function(message, title) {
    title = title || (window.I18n && window.I18n.messages ? window.I18n.messages.info : 'Information');
    Swal.fire({
      icon: 'info',
      title: title,
      text: message,
      confirmButtonColor: '#4f46e5',
      confirmButtonText: window.I18n && window.I18n.messages ? window.I18n.messages.ok : 'OK',
      timer: 3000,
      timerProgressBar: true
    });
  };

  // Tab switching with content refresh
  window.switchTab = async function(tabName) {
    // Hide all tab contents
    document.querySelectorAll('.tab-content').forEach(content => {
      content.classList.add('hidden');
    });
    
    // Remove active class from all tabs
    document.querySelectorAll('.tab-button').forEach(button => {
      button.classList.remove('active', 'border-indigo-600', 'text-indigo-600');
      button.classList.add('border-transparent', 'text-slate-500');
    });
    
    // Show loading state
    const contentDiv = document.getElementById(`content-${tabName}`);
    if (contentDiv) {
      const loadingText = window.I18n && window.I18n.common ? window.I18n.common.loading : 'Loading...';
      contentDiv.innerHTML = '<div class="flex items-center justify-center py-12"><div class="text-center"><svg class="mx-auto h-8 w-8 text-indigo-600 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg><p class="mt-2 text-sm text-slate-600">' + loadingText + '</p></div></div>';
      contentDiv.classList.remove('hidden');
    }
    
    // Add active class to selected tab
    const activeTab = document.getElementById(`tab-${tabName}`);
    activeTab.classList.add('active', 'border-indigo-600', 'text-indigo-600');
    activeTab.classList.remove('border-transparent', 'text-slate-500');
    
    // Fetch updated content
    try {
      let url;
      switch(tabName) {
        case 'dashboard':
          url = '/dashboard/activity_log';
          break;
        case 'account':
          url = '/dashboard/account';
          break;
        case 'leads':
          url = '/dashboard/leads';
          break;
        case 'campaigns':
          url = '/dashboard/campaigns';
          break;
        default:
          return;
      }
      
      const response = await fetch(url, {
        method: 'GET',
        headers: {
          'Accept': 'text/html',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]')?.content || '',
          'X-Requested-With': 'XMLHttpRequest'
        },
        credentials: 'same-origin'
      });
      
      if (response.ok) {
        const html = await response.text();
        contentDiv.innerHTML = html;
        
        // Reinitialize any scripts or components that need it
        if (tabName === 'campaigns') {
          // Reinitialize Select2 for campaigns tab if campaigns are already loaded
          if (typeof jQuery !== 'undefined' && jQuery.fn.select2) {
            const campaignSelect = document.getElementById('campaign-select');
            if (campaignSelect && campaignSelect.options.length > 1) {
              const selectPlaceholder = window.I18n && window.I18n.campaigns ? window.I18n.campaigns.select_campaign_placeholder : 'Select a campaign...';
              const noResultsText = window.I18n && window.I18n.campaigns ? window.I18n.campaigns.no_campaigns_found : 'No campaigns found';
              const searchingText = window.I18n && window.I18n.campaigns ? window.I18n.campaigns.searching : 'Searching...';
              
              if (jQuery(campaignSelect).hasClass('select2-hidden-accessible')) {
                jQuery(campaignSelect).select2('destroy');
              }
              
              jQuery(campaignSelect).select2({
                placeholder: selectPlaceholder,
                allowClear: true,
                width: '100%',
                language: {
                  noResults: function() {
                    return noResultsText;
                  },
                  searching: function() {
                    return searchingText;
                  }
                }
              });
              
              jQuery(campaignSelect).off('change').on('change', function() {
                const selectedCampaignId = this.value;
                const applyBtn = document.getElementById('apply-locations-btn');
                const locationManagement = document.getElementById('location-management');
                
                if (this.value) {
                  locationManagement.classList.remove('hidden');
                  applyBtn.disabled = false;
                  if (typeof fetchCurrentLocations === 'function') {
                    fetchCurrentLocations();
                  }
                  if (typeof initializeLocationsSelect2 === 'function') {
                    initializeLocationsSelect2();
                  }
                } else {
                  locationManagement.classList.add('hidden');
                  applyBtn.disabled = true;
                }
              });
            }
          }
        }
        
        if (tabName === 'account') {
          // Reinitialize Select2 and event listeners for account tab
          if (typeof jQuery !== 'undefined' && jQuery.fn.select2) {
            const selectPlaceholder = window.I18n && window.I18n.account ? window.I18n.account.select_account : 'Select an account...';
            const noResultsText = window.I18n && window.I18n.account ? window.I18n.account.no_account_found : 'No account found';
            const searchingText = window.I18n && window.I18n.account ? window.I18n.account.searching : 'Searching...';
            jQuery('#customer-select').select2({
              placeholder: selectPlaceholder,
              allowClear: true,
              width: '100%',
              language: {
                noResults: function() {
                  return noResultsText;
                },
                searching: function() {
                  return searchingText;
                }
              }
            });
            
            jQuery('#customer-select').off('change').on('change', async function() {
              const customerId = this.value;
              const googleAccountId = this.options[this.selectedIndex].dataset.googleAccountId;
              
              if (!customerId) return;
              
              try {
                const response = await fetch('/api/google_ads/customers/select', {
                  method: 'POST',
                  headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]')?.content || '',
                    'Accept': 'application/json'
                  },
                  credentials: 'same-origin',
                  body: JSON.stringify({ customer_id: customerId })
                });
                
                const data = await response.json();
                
                if (response.ok) {
                  window.location.reload();
                } else {
                  const errorMsg = window.I18n && window.I18n.account ? window.I18n.account.error_selecting : 'Error selecting account';
                  showError(data.error || errorMsg);
                }
              } catch (error) {
                console.error('Error selecting customer:', error);
                const errorMsg = window.I18n && window.I18n.account ? window.I18n.account.error_selecting : 'Error selecting account';
                showError(errorMsg);
              }
            });
          }
          
          // Reinitialize refresh button
          const refreshBtn = document.getElementById('refresh-customers-btn');
          if (refreshBtn) {
            refreshBtn.onclick = async function() {
              refreshBtn.disabled = true;
              const refreshingText = window.I18n && window.I18n.account ? window.I18n.account.refreshing : 'Refreshing...';
              refreshBtn.innerHTML = '<svg class="w-4 h-4 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg><span>' + refreshingText + '</span>';
              
              try {
                const response = await fetch('/api/google_ads/customers/refresh', {
                  method: 'POST',
                  headers: {
                    'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]')?.content || '',
                    'Accept': 'application/json'
                  },
                  credentials: 'same-origin'
                });
                
                const data = await response.json();
                
                if (response.ok) {
                  window.location.reload();
                } else {
                  const errorMsg = window.I18n && window.I18n.account ? window.I18n.account.error_refreshing : 'Error refreshing accounts';
                  showError(data.error || errorMsg);
                  refreshBtn.disabled = false;
                  const refreshText = window.I18n && window.I18n.account ? window.I18n.account.refresh_list : 'Refresh List';
                  refreshBtn.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg><span>' + refreshText + '</span>';
                }
              } catch (error) {
                console.error('Error refreshing customers:', error);
                const errorMsg = window.I18n && window.I18n.account ? window.I18n.account.error_refreshing : 'Error refreshing accounts';
                showError(errorMsg);
                refreshBtn.disabled = false;
                const refreshText = window.I18n && window.I18n.account ? window.I18n.account.refresh_list : 'Refresh List';
                refreshBtn.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg><span>' + refreshText + '</span>';
              }
            };
          }

          // Initialize fetch names button (now smart fetch)
          const fetchNamesBtn = document.getElementById('fetch-names-btn');
          if (fetchNamesBtn) {
            fetchNamesBtn.onclick = async function() {
              fetchNamesBtn.disabled = true;
              const fetchingText = 'Busca inteligente...';
              fetchNamesBtn.innerHTML = '<svg class="w-4 h-4 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg><span>' + fetchingText + '</span>';
              
              try {
                const response = await fetch('/api/google_ads/customers/names/smart_fetch', {
                  method: 'POST',
                  headers: {
                    'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]')?.content || '',
                    'Accept': 'application/json'
                  },
                  credentials: 'same-origin'
                });
                
                const data = await response.json();
                
                if (response.ok) {
                  if (data.updated_count > 0) {
                    showSuccess(`${data.updated_count} nomes foram obtidos da API com sucesso!`);
                    // Reload page to show updated names
                    setTimeout(() => window.location.reload(), 1500);
                  } else {
                    showInfo(data.message || 'Nenhum nome novo foi encontrado.');
                  }
                } else {
                  showError(data.error || 'Erro na busca inteligente');
                }
              } catch (error) {
                console.error('Error in smart fetch:', error);
                showError('Erro na busca inteligente');
              } finally {
                fetchNamesBtn.disabled = false;
                fetchNamesBtn.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/></svg><span>Busca inteligente</span>';
              }
            };
          }

          // Initialize names management section
          initializeNamesManagement();
        }
      } else {
        const errorLoadingText = window.I18n && window.I18n.account ? window.I18n.account.error_loading : 'Error loading content. Please reload the page.';
        contentDiv.innerHTML = '<div class="text-center py-12"><p class="text-sm text-slate-500">' + errorLoadingText + '</p></div>';
      }
    } catch (error) {
      console.error('Error loading tab content:', error);
      contentDiv.innerHTML = '<div class="text-center py-12"><p class="text-sm text-slate-500">Erro ao carregar conteúdo. Por favor, recarregue a página.</p></div>';
    }
  }

  // Modal functions
  window.openAccountSwitcherModal = function() {
    const modal = document.getElementById('account-switcher-modal');
    modal.classList.remove('hidden');
    modal.setAttribute('aria-hidden', 'false');
    
    // Initialize Select2 if not already initialized
    if (!jQuery('#modal-customer-select').hasClass('select2-hidden-accessible')) {
      const selectPlaceholder = window.I18n && window.I18n.account ? window.I18n.account.select_account : 'Select an account...';
      const noResultsText = window.I18n && window.I18n.account ? window.I18n.account.no_account_found : 'No account found';
      const searchingText = window.I18n && window.I18n.account ? window.I18n.account.searching : 'Searching...';
      jQuery('#modal-customer-select').select2({
        dropdownParent: jQuery('#account-switcher-modal'),
        placeholder: selectPlaceholder,
        allowClear: true,
        width: '100%',
        containerCssClass: 'select2-container--modal',
        dropdownCssClass: 'select2-dropdown--modal',
        language: {
          noResults: function() {
            return noResultsText;
          },
          searching: function() {
            return searchingText;
          }
        }
      });
    }

    // Initialize modal fetch names button
    const modalFetchNamesBtn = document.getElementById('modal-fetch-names-btn');
    if (modalFetchNamesBtn) {
      modalFetchNamesBtn.onclick = async function() {
        modalFetchNamesBtn.disabled = true;
        const fetchingText = 'Buscando nomes...';
        modalFetchNamesBtn.innerHTML = '<svg class="w-3 h-3 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg><span>' + fetchingText + '</span>';
        
        try {
          const response = await fetch('/api/google_ads/customers/names/smart_fetch', {
            method: 'POST',
            headers: {
              'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]')?.content || '',
              'Accept': 'application/json'
            },
            credentials: 'same-origin'
          });
          
          const data = await response.json();
          
          if (response.ok) {
            if (data.updated_count > 0) {
              showSuccess(`${data.updated_count} nomes foram obtidos da API com sucesso!`);
              // Close modal and reload page to show updated names
              closeAccountSwitcherModal();
              setTimeout(() => window.location.reload(), 1500);
            } else {
              showInfo(data.message || 'Nenhum nome novo foi encontrado.');
            }
          } else {
            showError(data.error || 'Erro ao buscar nomes das contas');
          }
        } catch (error) {
