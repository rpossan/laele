            const checkboxes = document.querySelectorAll('.lead-checkbox:checked');
            checkboxes.forEach(cb => cb.checked = false);
            window.leadsController.updateBulkActionBar();
            window.leadsController.updateSelectAllCheckbox();
          }
        } else {
          const errorSendingText = window.I18n && window.I18n.leads ? window.I18n.leads.error_sending : 'Error sending feedback: %{error}';
          const errorMsg = errorSendingText.replace('%{error}', data.error || (window.I18n && window.I18n.errors ? window.I18n.errors.unknown_error : 'Unknown error'));
          showError(errorMsg);
          submitBtn.disabled = false;
          submitBtn.innerHTML = originalBtnText;
        }
      })
      .catch(error => {
        // Close loading overlay
        Swal.close();
        
        console.error("Error submitting feedback:", error);
        const errorSendingText = window.I18n && window.I18n.leads ? window.I18n.leads.error_sending : 'Error sending feedback: %{error}';
        const errorMsg = errorSendingText.replace('%{error}', error.message);
        showError(errorMsg);
        submitBtn.disabled = false;
        submitBtn.innerHTML = originalBtnText;
      });
    };
  })();

  // Names management functions
  function initializeNamesManagement() {
    // Toggle names section
    const toggleBtn = document.getElementById('toggle-names-section');
    const namesSection = document.getElementById('names-management');
    
    if (toggleBtn && namesSection) {
      toggleBtn.onclick = function() {
        const isHidden = namesSection.classList.contains('hidden');
        const toggleText = toggleBtn.querySelector('.toggle-text');
        const toggleIcon = toggleBtn.querySelector('.toggle-icon');
        
        if (isHidden) {
          namesSection.classList.remove('hidden');
          toggleText.textContent = 'Ocultar';
          toggleIcon.style.transform = 'rotate(180deg)';
        } else {
          namesSection.classList.add('hidden');
          toggleText.textContent = 'Mostrar';
          toggleIcon.style.transform = 'rotate(0deg)';
        }
      };
    }

    // Initialize inline editing
    document.querySelectorAll('.editable-name').forEach(element => {
      element.onclick = function() {
        startInlineEdit(this);
      };
    });

    document.querySelectorAll('.edit-name-btn').forEach(button => {
      button.onclick = function(e) {
        e.stopPropagation();
        const customerId = this.dataset.customerId;
        const editableElement = document.querySelector(`.editable-name[data-customer-id="${customerId}"]`);
        if (editableElement) {
          startInlineEdit(editableElement);
        }
      };
    });
  }

  function startInlineEdit(element) {
    const customerId = element.dataset.customerId;
    const currentName = element.dataset.currentName;
    const nameDisplay = element.querySelector('.name-display');
    
    // Create input element
    const input = document.createElement('input');
    input.type = 'text';
    input.value = currentName;
    input.className = 'w-full px-2 py-1 text-sm border border-indigo-300 rounded focus:outline-none focus:ring-2 focus:ring-indigo-200';
    input.placeholder = 'Digite um nome para esta conta...';
    
    // Replace display with input
    const originalContent = nameDisplay.innerHTML;
    nameDisplay.innerHTML = '';
    nameDisplay.appendChild(input);
    
    // Focus and select
    input.focus();
    input.select();
    
    // Save function
    const saveEdit = async function() {
      const newName = input.value.trim();
      
      try {
        const response = await fetch(`/api/google_ads/customers/${customerId}/name`, {
          method: 'PATCH',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]')?.content || '',
            'Accept': 'application/json'
          },
          credentials: 'same-origin',
          body: JSON.stringify({ custom_name: newName })
        });
        
        const data = await response.json();
        
        if (response.ok) {
          // Update the display
          element.dataset.currentName = newName;
          nameDisplay.innerHTML = originalContent;
          nameDisplay.querySelector('span').textContent = data.effective_name;
          
          // Update the select dropdown
          const selectOption = document.querySelector(`#customer-select option[value="${customerId}"]`);
          if (selectOption) {
            const formattedId = selectOption.textContent.split(' — ')[0];
            selectOption.textContent = `${formattedId} — ${data.effective_name}`;
          }
          
          showSuccess('Nome atualizado com sucesso!');
          
          // Reload to update badges and other UI elements
          setTimeout(() => window.location.reload(), 1000);
        } else {
          nameDisplay.innerHTML = originalContent;
          showError(data.error || 'Erro ao atualizar nome');
        }
      } catch (error) {
        console.error('Error updating name:', error);
        nameDisplay.innerHTML = originalContent;
        showError('Erro ao atualizar nome');
      }
    };
    
    // Cancel function
    const cancelEdit = function() {
      nameDisplay.innerHTML = originalContent;
    };
    
    // Event listeners
    input.onblur = saveEdit;
    input.onkeydown = function(e) {
      if (e.key === 'Enter') {
        e.preventDefault();
        saveEdit();
      } else if (e.key === 'Escape') {
        e.preventDefault();
        cancelEdit();
      }
    };
  }
</script>
