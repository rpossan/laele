<% all_customers = (@google_accounts || []).flat_map(&:accessible_customers) %>

<div class="space-y-6">
  <!-- Tabs Navigation -->
  <div class="border-b border-slate-200">
    <nav class="flex space-x-8" aria-label="Tabs">
      <button 
        id="tab-dashboard" 
        class="tab-button <%= current_page?(dashboard_path) && !current_page?(leads_path) ? 'active border-b-2 border-indigo-600 text-indigo-600' : 'border-b-2 border-transparent text-slate-500 hover:text-slate-700 hover:border-slate-300' %> py-4 px-1 text-sm font-semibold transition-colors"
        onclick="switchTab('dashboard')">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
          <span>Dashboard</span>
        </div>
      </button>
      <button 
        id="tab-account" 
        class="tab-button border-b-2 border-transparent text-slate-500 hover:text-slate-700 hover:border-slate-300 py-4 px-1 text-sm font-semibold transition-colors"
        onclick="switchTab('account')">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
          </svg>
          <span>Conta</span>
        </div>
      </button>
      <button 
        id="tab-leads" 
        class="tab-button <%= current_page?(leads_path) ? 'active border-b-2 border-indigo-600 text-indigo-600' : 'border-b-2 border-transparent text-slate-500 hover:text-slate-700 hover:border-slate-300' %> py-4 px-1 text-sm font-semibold transition-colors"
        onclick="switchTab('leads')">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          <span>Leads</span>
        </div>
      </button>
    </nav>
  </div>

  <!-- Tab Content: Dashboard -->
  <div id="content-dashboard" class="tab-content <%= current_page?(leads_path) ? 'hidden' : '' %>">
    <%= render partial: 'dashboard/activity_log' %>
  </div>

  <!-- Tab Content: Account -->
  <div id="content-account" class="tab-content hidden">
    <%= render partial: 'dashboard/account_tab' %>
  </div>

  <!-- Tab Content: Leads -->
  <div id="content-leads" class="tab-content <%= current_page?(dashboard_path) ? 'hidden' : '' %>">
    <%= render partial: 'dashboard/leads_section' %>
  </div>
</div>

<!-- Account Switcher Modal -->
<div id="account-switcher-modal" class="fixed inset-0 z-50 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="fixed inset-0 bg-slate-900/50 backdrop-blur-sm" onclick="closeAccountSwitcherModal()"></div>
  <div class="fixed inset-0 flex items-center justify-center p-4">
    <div class="relative w-full max-w-2xl rounded-2xl border border-slate-200 bg-white shadow-2xl">
    <div class="px-6 pt-6 pb-4">
      <div class="mb-4 flex items-center justify-between">
          <div>
            <h3 class="text-xl font-bold text-slate-900" id="modal-title">Trocar conta administrada</h3>
            <p class="mt-1 text-sm text-slate-600">Selecione a conta que deseja usar para trabalhar</p>
          </div>
          <button onclick="closeAccountSwitcherModal()" class="text-slate-400 hover:text-slate-900 transition">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

        <div class="mb-4">
          <label class="block text-sm font-semibold text-slate-700 mb-2">Conta administrada</label>
          <select id="modal-customer-select" class="w-full">
            <option value="">Selecione uma conta...</option>
            <% if all_customers.any? %>
              <% all_customers.each do |customer| %>
                <option value="<%= customer.customer_id %>"
                        data-google-account-id="<%= customer.google_account_id %>"
                        <%= "selected" if @active_selection&.customer_id == customer.customer_id %>>
                  <%= format_customer_id(customer.customer_id) %> — <%= customer.display_name || "Sem nome" %>
                </option>
              <% end %>
            <% end %>
          </select>
        </div>

        <div class="flex items-center justify-end gap-3 border-t border-slate-200 pt-4">
          <button 
            type="button" 
            onclick="closeAccountSwitcherModal()" 
            class="rounded-lg border border-slate-200 px-4 py-2 text-sm font-medium text-slate-600 hover:text-slate-900 hover:border-slate-300 transition">
            Cancelar
          </button>
          <button 
            type="button" 
            id="modal-save-btn"
            onclick="saveAccountSelection()" 
            class="rounded-lg bg-indigo-600 px-6 py-2 text-sm font-semibold text-white hover:bg-indigo-700 transition">
            Salvar
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Notification helpers using SweetAlert2
  window.showSuccess = function(message, title = 'Sucesso!') {
    Swal.fire({
      icon: 'success',
      title: title,
      text: message,
      confirmButtonColor: '#4f46e5',
      confirmButtonText: 'OK',
      timer: 3000,
      timerProgressBar: true
    });
  };

  window.showError = function(message, title = 'Erro!') {
    Swal.fire({
      icon: 'error',
      title: title,
      text: message,
      confirmButtonColor: '#ef4444',
      confirmButtonText: 'OK'
    });
  };

  window.showInfo = function(message, title = 'Informação') {
    Swal.fire({
      icon: 'info',
      title: title,
      text: message,
      confirmButtonColor: '#4f46e5',
      confirmButtonText: 'OK',
      timer: 3000,
      timerProgressBar: true
    });
  };

  // Tab switching with content refresh
  window.switchTab = async function(tabName) {
    // Hide all tab contents
    document.querySelectorAll('.tab-content').forEach(content => {
      content.classList.add('hidden');
    });
    
    // Remove active class from all tabs
    document.querySelectorAll('.tab-button').forEach(button => {
      button.classList.remove('active', 'border-indigo-600', 'text-indigo-600');
      button.classList.add('border-transparent', 'text-slate-500');
    });
    
    // Show loading state
    const contentDiv = document.getElementById(`content-${tabName}`);
    if (contentDiv) {
      contentDiv.innerHTML = '<div class="flex items-center justify-center py-12"><div class="text-center"><svg class="mx-auto h-8 w-8 text-indigo-600 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg><p class="mt-2 text-sm text-slate-600">Carregando...</p></div></div>';
      contentDiv.classList.remove('hidden');
    }
    
    // Add active class to selected tab
    const activeTab = document.getElementById(`tab-${tabName}`);
    activeTab.classList.add('active', 'border-indigo-600', 'text-indigo-600');
    activeTab.classList.remove('border-transparent', 'text-slate-500');
    
    // Fetch updated content
    try {
      let url;
      switch(tabName) {
        case 'dashboard':
          url = '/dashboard/activity_log';
          break;
        case 'account':
          url = '/dashboard/account';
          break;
        case 'leads':
          url = '/dashboard/leads';
          break;
        default:
          return;
      }
      
      const response = await fetch(url, {
        method: 'GET',
        headers: {
          'Accept': 'text/html',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]')?.content || '',
          'X-Requested-With': 'XMLHttpRequest'
        },
        credentials: 'same-origin'
      });
      
      if (response.ok) {
        const html = await response.text();
        contentDiv.innerHTML = html;
        
        // Reinitialize any scripts or components that need it
        if (tabName === 'account') {
          // Reinitialize Select2 and event listeners for account tab
          if (typeof jQuery !== 'undefined' && jQuery.fn.select2) {
            jQuery('#customer-select').select2({
              placeholder: 'Selecione uma conta...',
              allowClear: true,
              width: '100%',
              language: {
                noResults: function() {
                  return "Nenhuma conta encontrada";
                },
                searching: function() {
                  return "Buscando...";
                }
              }
            });
            
            jQuery('#customer-select').off('change').on('change', async function() {
              const customerId = this.value;
              const googleAccountId = this.options[this.selectedIndex].dataset.googleAccountId;
              
              if (!customerId) return;
              
              try {
                const response = await fetch('/api/google_ads/customers/select', {
                  method: 'POST',
                  headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]')?.content || '',
                    'Accept': 'application/json'
                  },
                  credentials: 'same-origin',
                  body: JSON.stringify({ customer_id: customerId })
                });
                
                const data = await response.json();
                
                if (response.ok) {
                  window.location.reload();
                } else {
                  showError(data.error || 'Erro ao selecionar conta');
                }
              } catch (error) {
                console.error('Error selecting customer:', error);
                showError('Erro ao selecionar conta');
              }
            });
          }
          
          // Reinitialize refresh button
          const refreshBtn = document.getElementById('refresh-customers-btn');
          if (refreshBtn) {
            refreshBtn.onclick = async function() {
              refreshBtn.disabled = true;
              refreshBtn.innerHTML = '<svg class="w-4 h-4 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg><span>Atualizando...</span>';
              
              try {
                const response = await fetch('/api/google_ads/customers/refresh', {
                  method: 'POST',
                  headers: {
                    'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]')?.content || '',
                    'Accept': 'application/json'
                  },
                  credentials: 'same-origin'
                });
                
                const data = await response.json();
                
                if (response.ok) {
                  window.location.reload();
                } else {
                  showError(data.error || 'Erro ao atualizar contas');
                  refreshBtn.disabled = false;
                  refreshBtn.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg><span>Atualizar lista</span>';
                }
              } catch (error) {
                console.error('Error refreshing customers:', error);
                showError('Erro ao atualizar contas');
                refreshBtn.disabled = false;
                refreshBtn.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg><span>Atualizar lista</span>';
              }
            };
          }
        }
      } else {
        contentDiv.innerHTML = '<div class="text-center py-12"><p class="text-sm text-slate-500">Erro ao carregar conteúdo. Por favor, recarregue a página.</p></div>';
      }
    } catch (error) {
      console.error('Error loading tab content:', error);
      contentDiv.innerHTML = '<div class="text-center py-12"><p class="text-sm text-slate-500">Erro ao carregar conteúdo. Por favor, recarregue a página.</p></div>';
    }
  }

  // Modal functions
  window.openAccountSwitcherModal = function() {
    const modal = document.getElementById('account-switcher-modal');
    modal.classList.remove('hidden');
    modal.setAttribute('aria-hidden', 'false');
    
    // Initialize Select2 if not already initialized
    if (!jQuery('#modal-customer-select').hasClass('select2-hidden-accessible')) {
      jQuery('#modal-customer-select').select2({
        dropdownParent: jQuery('#account-switcher-modal'),
        placeholder: 'Selecione uma conta...',
        allowClear: true,
        width: '100%',
        language: {
          noResults: function() {
            return "Nenhuma conta encontrada";
          },
          searching: function() {
            return "Buscando...";
          }
        }
      });
    }
  }

  window.closeAccountSwitcherModal = function() {
    const modal = document.getElementById('account-switcher-modal');
    modal.classList.add('hidden');
    modal.setAttribute('aria-hidden', 'true');
  }

  window.saveAccountSelection = function() {
    const select = document.getElementById('modal-customer-select');
    const customerId = select.value;
    const selectedOption = select.options[select.selectedIndex];
    const googleAccountId = selectedOption ? selectedOption.dataset.googleAccountId : null;
    
    if (!customerId) {
      showInfo('Por favor, selecione uma conta');
      return;
    }
    
    const saveBtn = document.getElementById('modal-save-btn');
    saveBtn.disabled = true;
    saveBtn.textContent = 'Salvando...';
    
    fetch('/api/google_ads/customers/select', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]')?.content || '',
        'Accept': 'application/json'
      },
      credentials: 'same-origin',
      body: JSON.stringify({ customer_id: customerId })
    })
    .then(response => response.json())
    .then(data => {
      if (data.success || data.message) {
        closeAccountSwitcherModal();
        window.location.reload();
      } else {
            showError(data.error || 'Erro ao selecionar conta');
        saveBtn.disabled = false;
        saveBtn.textContent = 'Salvar';
      }
    })
    .catch(error => {
      console.error('Error selecting customer:', error);
          showError('Erro ao selecionar conta');
      saveBtn.disabled = false;
      saveBtn.textContent = 'Salvar';
    });
  }

  // Initialize correct tab on page load
  document.addEventListener('DOMContentLoaded', function() {
    // Check which tab should be active based on current route
    const isLeadsPage = window.location.pathname === '<%= leads_path %>';
    if (isLeadsPage) {
      switchTab('leads');
    } else {
      switchTab('dashboard');
    }
  });

  // Initialize Select2 for main customer select and refresh button
  document.addEventListener('DOMContentLoaded', function() {
    // Refresh customers button
    const refreshBtn = document.getElementById('refresh-customers-btn');
    if (refreshBtn) {
      refreshBtn.addEventListener('click', async function() {
        refreshBtn.disabled = true;
        refreshBtn.innerHTML = '<svg class="w-4 h-4 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg><span>Atualizando...</span>';
        
        try {
          const response = await fetch('/api/google_ads/customers/refresh', {
            method: 'POST',
            headers: {
              'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]')?.content || '',
              'Accept': 'application/json'
            },
            credentials: 'same-origin'
          });
          
          const data = await response.json();
          
          if (response.ok) {
            window.location.reload();
          } else {
            showError(data.error || 'Erro ao atualizar contas');
            refreshBtn.disabled = false;
            refreshBtn.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg><span>Atualizar lista</span>';
          }
        } catch (error) {
          console.error('Error refreshing customers:', error);
          showError('Erro ao atualizar contas');
          refreshBtn.disabled = false;
          refreshBtn.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg><span>Atualizar lista</span>';
        }
      });
    }

    // Initialize Select2 for customer select
    if (typeof jQuery !== 'undefined' && jQuery.fn.select2) {
      jQuery('#customer-select').select2({
        placeholder: 'Selecione uma conta...',
        allowClear: true,
        width: '100%',
        language: {
          noResults: function() {
            return "Nenhuma conta encontrada";
          },
          searching: function() {
            return "Buscando...";
          }
        }
      });
      
      jQuery('#customer-select').on('change', async function() {
        const customerId = this.value;
        const googleAccountId = this.options[this.selectedIndex].dataset.googleAccountId;
        
        if (!customerId) return;
        
        try {
          const response = await fetch('/api/google_ads/customers/select', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]')?.content || '',
              'Accept': 'application/json'
            },
            credentials: 'same-origin',
            body: JSON.stringify({ customer_id: customerId })
          });
          
          const data = await response.json();
          
          if (response.ok) {
            window.location.reload();
          } else {
            showError(data.error || 'Erro ao selecionar conta');
          }
        } catch (error) {
          console.error('Error selecting customer:', error);
          showError('Erro ao selecionar conta');
        }
      });
    }
  });

  // Feedback modal functions (from original dashboard)
  (function() {
    const dissatisfiedReasons = [
      { value: 'SPAM', label: 'Spam' },
      { value: 'JOB_TYPE_MISMATCH', label: 'Tipo de trabalho não corresponde' },
      { value: 'DUPLICATE', label: 'Duplicado' },
      { value: 'NOT_INTERESTED', label: 'Não interessado' },
      { value: 'WRONG_PHONE_NUMBER', label: 'Número de telefone errado' },
      { value: 'WRONG_EMAIL_ADDRESS', label: 'Email errado' },
      { value: 'WRONG_NAME', label: 'Nome errado' }
      // Note: "OTHER" is not a valid value for dissatisfied reasons in Google Ads API v22
    ];
    
    const satisfiedReasons = [
      { value: 'SERVICE_RELATED', label: 'Relacionado ao serviço' },
      { value: 'BOOKED_CUSTOMER', label: 'Cliente agendado' },
      { value: 'LIKELY_BOOKED_CUSTOMER', label: 'Provavelmente cliente agendado' },
      { value: 'HIGH_VALUE_SERVICE', label: 'Serviço de alto valor' },
      { value: 'OTHER_SATISFIED_REASON', label: 'Outro motivo' }
    ];
    
    window.openFeedbackModal = function(leadId, leadIds = null) {
      // Support both single lead and bulk leads
      const isBulk = Array.isArray(leadIds) && leadIds.length > 1;
      const singleLeadId = isBulk ? null : leadId;
      
      if (!singleLeadId && !isBulk) {
        showError('ID do lead não fornecido');
        return;
      }
      
      const modal = document.getElementById('feedback-modal');
      const leadIdInput = document.getElementById('feedback-lead-id');
      const leadIdsInput = document.getElementById('feedback-lead-ids');
      const bulkInfo = document.getElementById('bulk-feedback-info');
      const bulkCount = document.getElementById('bulk-lead-count');
      const modalTitle = document.getElementById('modal-title');
      const form = document.getElementById('feedback-form');
      
      if (!modal || !form) return;
      
      // Set lead IDs
      if (isBulk) {
        leadIdInput.value = '';
        leadIdsInput.value = JSON.stringify(leadIds);
        if (bulkInfo) bulkInfo.classList.remove('hidden');
        if (bulkCount) bulkCount.textContent = leadIds.length;
        if (modalTitle) modalTitle.textContent = 'Avaliar Leads Selecionados';
      } else {
        leadIdInput.value = singleLeadId;
        leadIdsInput.value = '';
        if (bulkInfo) bulkInfo.classList.add('hidden');
        if (modalTitle) modalTitle.textContent = 'Submeter Feedback';
      }
      
      form.reset();
      const reasonSection = document.getElementById('reason-section');
      const otherReasonSection = document.getElementById('other-reason-section');
      if (reasonSection) reasonSection.classList.add('hidden');
      if (otherReasonSection) otherReasonSection.classList.add('hidden');
      
      modal.classList.remove('hidden');
      modal.style.display = 'block';
      modal.setAttribute('aria-hidden', 'false');
      
      const surveyInputs = form.querySelectorAll('input[name="survey_answer"]');
      surveyInputs.forEach(input => {
        const newInput = input.cloneNode(true);
        input.parentNode.replaceChild(newInput, input);
        newInput.addEventListener('change', function() {
          updateReasonOptions(this.value);
        });
      });
    };
    
    window.closeFeedbackModal = function() {
      const modal = document.getElementById('feedback-modal');
      if (modal) {
        modal.classList.add('hidden');
        modal.style.display = 'none';
        modal.setAttribute('aria-hidden', 'true');
      }
    };
    
    function updateReasonOptions(surveyAnswer) {
      const reasonSection = document.getElementById('reason-section');
      const reasonSelect = document.getElementById('feedback-reason');
      const otherReasonSection = document.getElementById('other-reason-section');
      const reasonLabel = document.getElementById('reason-label');
      
      if (!reasonSection || !reasonSelect) return;
      
      reasonSelect.innerHTML = '<option value="">Selecione um motivo (opcional)</option>';
      
      if (surveyAnswer === 'VERY_DISSATISFIED' || surveyAnswer === 'DISSATISFIED') {
        reasonLabel.textContent = 'Motivo da insatisfação';
        dissatisfiedReasons.forEach(reason => {
          const option = document.createElement('option');
          option.value = reason.value;
          option.textContent = reason.label;
          reasonSelect.appendChild(option);
        });
        reasonSection.classList.remove('hidden');
      } else if (surveyAnswer === 'SATISFIED' || surveyAnswer === 'VERY_SATISFIED') {
        reasonLabel.textContent = 'Motivo da satisfação';
        satisfiedReasons.forEach(reason => {
          const option = document.createElement('option');
          option.value = reason.value;
          option.textContent = reason.label;
          reasonSelect.appendChild(option);
        });
        reasonSection.classList.remove('hidden');
      } else {
        reasonSection.classList.add('hidden');
        otherReasonSection.classList.add('hidden');
      }
      
      reasonSelect.addEventListener('change', function() {
        if (this.value === 'OTHER_SATISFIED_REASON') {
          otherReasonSection.classList.remove('hidden');
        } else {
          otherReasonSection.classList.add('hidden');
        }
      });
    }
    
    window.handleFeedbackSubmit = function(event) {
      event.preventDefault();
      
      const form = event.target;
      const leadId = document.getElementById('feedback-lead-id').value;
      const leadIdsJson = document.getElementById('feedback-lead-ids').value;
      const submitBtn = document.getElementById('submit-feedback-btn');
      
      const formData = new FormData(form);
      const payload = {
        survey_answer: formData.get('survey_answer')
      };
      
      const reason = formData.get('reason');
      if (reason) payload.reason = reason;
      
      const otherComment = formData.get('other_reason_comment');
      if (otherComment) payload.other_reason_comment = otherComment;
      
      // Check if it's bulk feedback
      const isBulk = leadIdsJson && leadIdsJson.trim() !== '';
      let leadIds = [];
      
      if (isBulk) {
        try {
          leadIds = JSON.parse(leadIdsJson);
          if (!Array.isArray(leadIds) || leadIds.length < 2) {
            showError('IDs de leads inválidos para avaliação em lote');
            return;
          }
          payload.lead_ids = leadIds;
        } catch (e) {
          showError('Erro ao processar IDs dos leads selecionados');
          return;
        }
      }
      
      submitBtn.disabled = true;
      const originalBtnText = submitBtn.textContent;
      const loadingText = isBulk ? `Enviando para ${leadIds.length} leads...` : 'Enviando...';
      submitBtn.innerHTML = `
        <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white inline" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        ${loadingText}
      `;
      
      // Show loading overlay with SweetAlert2
      const loadingMessage = isBulk 
        ? `Processando feedback para ${leadIds.length} leads...`
        : 'Enviando feedback...';
      
      Swal.fire({
        title: 'Processando...',
        html: `
          <div class="flex flex-col items-center gap-4">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-indigo-600"></div>
            <p class="text-slate-600">${loadingMessage}</p>
            <p class="text-xs text-slate-400">Por favor, aguarde...</p>
          </div>
        `,
        allowOutsideClick: false,
        allowEscapeKey: false,
        showConfirmButton: false,
        didOpen: () => {
          Swal.showLoading();
        }
      });
      
      const url = isBulk ? '/api/leads/bulk_feedback' : `/api/leads/${leadId}/feedback`;
      
      fetch(url, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Accept': 'application/json',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]')?.content || ''
        },
        credentials: 'same-origin',
        body: JSON.stringify(payload)
      })
      .then(async response => {
        // Check if response is ok
        if (!response.ok) {
          // Try to parse error as JSON, fallback to text
          let errorMessage = `Erro ${response.status}: ${response.statusText}`;
          try {
            const errorData = await response.json();
            errorMessage = errorData.error || errorMessage;
          } catch (e) {
            // If not JSON, try to get text
            try {
              const errorText = await response.text();
              errorMessage = errorText || errorMessage;
            } catch (e2) {
              // Keep default error message
            }
          }
          throw new Error(errorMessage);
        }
        
        // Parse JSON response
        const contentType = response.headers.get('content-type');
        if (!contentType || !contentType.includes('application/json')) {
          throw new Error('Resposta do servidor não é JSON válido');
        }
        
        return response.json();
      })
      .then(data => {
        // Close loading overlay
        Swal.close();
        
        if (data.success || data.message) {
          closeFeedbackModal();
          const message = isBulk 
            ? `Feedback enviado com sucesso para ${data.processed_count || leadIds.length} leads!`
            : "Feedback enviado com sucesso!";
          showSuccess(message);
          const button = document.getElementById('fetch-leads-btn');
          if (button) button.click();
          // Clear checkboxes after successful bulk feedback
          if (isBulk && window.leadsController) {
            const checkboxes = document.querySelectorAll('.lead-checkbox:checked');
            checkboxes.forEach(cb => cb.checked = false);
            window.leadsController.updateBulkActionBar();
            window.leadsController.updateSelectAllCheckbox();
          }
        } else {
          showError("Erro ao enviar feedback: " + (data.error || "Erro desconhecido"));
          submitBtn.disabled = false;
          submitBtn.innerHTML = originalBtnText;
        }
      })
      .catch(error => {
        // Close loading overlay
        Swal.close();
        
        console.error("Error submitting feedback:", error);
        showError("Erro ao enviar feedback: " + error.message);
        submitBtn.disabled = false;
        submitBtn.innerHTML = originalBtnText;
      });
    };
  })();
