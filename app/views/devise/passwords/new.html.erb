<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-slate-50 to-slate-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <div class="bg-white shadow-xl rounded-2xl px-8 pt-8 pb-8 border border-slate-200">
      <div class="mb-8 text-center">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-gradient-to-br from-amber-500 to-orange-500 text-white mb-4 shadow-lg">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c1.657 0 3-1.567 3-3.5S13.657 4 12 4s-3 1.567-3 3.5S10.343 11 12 11zM5.5 20h13a1.5 1.5 0 001.5-1.5 6.5 6.5 0 00-6.5-6.5h-3a6.5 6.5 0 00-6.5 6.5 1.5 1.5 0 001.5 1.5z"/>
          </svg>
        </div>
        <h2 class="text-3xl font-bold text-slate-900 mb-2"><%= t("devise.passwords.new.title") %></h2>
        <p class="text-sm text-slate-600"><%= t("devise.passwords.new.description") %></p>
      </div>

      <% if notice.present? %>
        <div class="mb-4 p-4 bg-emerald-50 border border-emerald-200 rounded-xl text-emerald-900 text-sm flex items-center gap-2">
          <svg class="w-5 h-5 text-emerald-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span><%= notice %></span>
        </div>
      <% end %>

      <% if alert.present? %>
        <div class="mb-4 p-4 bg-rose-50 border border-rose-200 rounded-xl text-rose-900 text-sm flex items-center gap-2">
          <svg class="w-5 h-5 text-rose-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
          <span><%= alert %></span>
        </div>
      <% end %>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-5" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, t("devise.passwords.new.email"), class: "block text-sm font-semibold text-slate-700 mb-2" %>
          <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                placeholder: t("devise.passwords.new.email_placeholder"),
                class: "appearance-none block w-full px-4 py-3 border border-slate-300 rounded-xl shadow-sm placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm transition-all" %>
        </div>

        <div class="pt-2">
          <%= f.submit t("devise.passwords.new.submit"), 
                class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-xl shadow-lg text-sm font-semibold text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all transform hover:-translate-y-0.5 hover:shadow-xl" %>
        </div>
      <% end %>

      <div class="mt-6 text-center text-sm space-y-2">
        <p class="text-slate-600"><%= t("devise.passwords.new.tip") %></p>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
