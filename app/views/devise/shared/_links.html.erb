<%- if controller_name != 'sessions' %>
  <%= link_to "Já tem uma conta? Entrar", new_session_path(resource_name), 
        class: "text-indigo-600 hover:text-indigo-800 font-medium" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Não tem conta? Criar conta", new_registration_path(resource_name), 
        class: "text-indigo-600 hover:text-indigo-800 font-medium" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), 
        class: "text-indigo-600 hover:text-indigo-800" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Não recebeu instruções de confirmação?", new_confirmation_path(resource_name), 
        class: "text-indigo-600 hover:text-indigo-800" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Não recebeu instruções de desbloqueio?", new_unlock_path(resource_name), 
        class: "text-indigo-600 hover:text-indigo-800" %><br />
<% end %>
