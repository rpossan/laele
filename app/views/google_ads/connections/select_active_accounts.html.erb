<div class="max-w-4xl mx-auto space-y-8">
  <!-- Header Section -->
  <div class="text-center space-y-4">
    <div class="inline-flex items-center gap-2 rounded-full bg-indigo-50 text-indigo-700 px-4 py-2 text-xs font-semibold uppercase tracking-wider">
      <span class="inline-flex h-6 w-6 items-center justify-center rounded-full bg-indigo-600 text-white font-bold">2</span>
      <span><%= t('plans.step_select_accounts') %></span>
    </div>
    <h1 class="text-3xl sm:text-4xl font-bold text-slate-900"><%= t('plans.select_accounts_title') %></h1>
    <p class="text-lg text-slate-600 max-w-3xl mx-auto"><%= t('plans.select_accounts_subtitle') %></p>
  </div>

  <!-- Plan Summary -->
  <div class="rounded-2xl border border-emerald-200 bg-emerald-50 p-4 shadow-sm">
    <div class="flex items-center gap-4">
      <div class="flex-shrink-0 h-10 w-10 rounded-full bg-emerald-100 flex items-center justify-center">
        <svg class="h-5 w-5 text-emerald-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div class="flex-1">
        <p class="text-sm text-emerald-600 font-medium"><%= t('plans.selected_plan') %></p>
        <p class="text-lg font-bold text-emerald-800">
          <%= t("plans.#{@plan.slug}.name", default: @plan.name) %>
          <% if @plan.per_account? %>
            <span class="text-sm font-normal text-emerald-600">
              (<%= number_to_currency(@plan.price_per_account_brl, unit: "R$", format: "%u%n", precision: 0) %>/<%= t('plans.per_subaccount') %>)
            </span>
          <% elsif @plan.max_accounts %>
            <span class="text-sm font-normal text-emerald-600">
              (<%= t('plans.up_to_accounts', count: @plan.max_accounts) %>)
            </span>
          <% end %>
        </p>
      </div>
      <%= link_to google_ads_select_plan_path, class: "text-emerald-600 hover:text-emerald-700 text-sm font-medium" do %>
        <%= t('plans.change_plan') %>
      <% end %>
    </div>
  </div>

  <!-- Account Selection Form -->
  <%= form_with url: google_ads_save_active_accounts_path, method: :post, local: true, id: "account-selection-form", data: { controller: "account-selection" } do |f| %>

    <!-- Selection Counter -->
    <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm mb-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div class="flex-shrink-0 h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center">
            <svg class="h-5 w-5 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 003.741-.479 3 3 0 00-4.682-2.72m.94 3.198l.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0112 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 016 18.719m12 0a5.971 5.971 0 00-.941-3.197m0 0A5.995 5.995 0 0012 12.75a5.995 5.995 0 00-5.058 2.772m0 0a3 3 0 00-4.681 2.72 8.986 8.986 0 003.74.477m.94-3.197a5.971 5.971 0 00-.94 3.197M15 6.75a3 3 0 11-6 0 3 3 0 016 0zm6 3a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0zm-13.5 0a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z" />
            </svg>
          </div>
          <div>
            <p class="text-sm text-slate-500"><%= t('plans.accounts_selected') %></p>
            <p class="text-lg font-bold text-slate-900">
              <span id="selected-count">0</span>
              <% if @plan.max_accounts %>
                / <%= @max_accounts %>
              <% end %>
              <%= t('plans.accounts') %>
            </p>
          </div>
        </div>

        <% if @is_per_account %>
          <div class="text-right">
            <p class="text-sm text-slate-500"><%= t('plans.estimated_monthly') %></p>
            <p class="text-lg font-bold text-indigo-600">
              R$ <span id="estimated-price">0</span>
            </p>
          </div>
        <% end %>
      </div>

      <% if @plan.max_accounts %>
        <div class="mt-3">
          <div class="w-full bg-slate-200 rounded-full h-2">
            <div id="progress-bar" class="bg-indigo-600 h-2 rounded-full transition-all" style="width: 0%"></div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Accounts List -->
    <div class="rounded-2xl border border-slate-200 bg-white shadow-sm overflow-hidden">
      <div class="p-4 border-b border-slate-100 bg-slate-50">
        <div class="flex items-center justify-between">
          <h3 class="font-semibold text-slate-900"><%= t('plans.available_accounts') %></h3>
          <% unless @plan.max_accounts && @customer_ids.count > @plan.max_accounts %>
            <button type="button" id="select-all-btn" class="text-sm text-indigo-600 hover:text-indigo-700 font-medium">
              <%= t('plans.select_all') %>
            </button>
          <% end %>
        </div>
      </div>

      <div class="divide-y divide-slate-100 max-h-96 overflow-y-auto">
        <% @customer_ids.each_with_index do |customer_id, index| %>
          <label class="account-item flex items-center gap-4 p-4 hover:bg-slate-50 cursor-pointer transition" data-customer-id="<%= customer_id %>">
            <input type="checkbox"
                   name="selected_customer_ids[]"
                   value="<%= customer_id %>"
                   class="account-checkbox h-5 w-5 rounded border-slate-300 text-indigo-600 focus:ring-indigo-500"
                   data-action="change->account-selection#updateCount">
            <div class="flex-shrink-0 h-10 w-10 rounded-full bg-slate-100 flex items-center justify-center">
              <svg class="h-5 w-5 text-slate-500" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <p class="font-medium text-slate-900"><%= format_customer_id(customer_id) %></p>
              <% if @customer_names[customer_id].present? %>
                <p class="text-sm text-slate-500 truncate"><%= @customer_names[customer_id] %></p>
              <% end %>
            </div>
            <div class="account-status hidden">
              <span class="inline-flex items-center gap-1 px-2 py-1 rounded-full text-xs font-medium bg-emerald-100 text-emerald-700">
                <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <%= t('plans.will_be_activated') %>
              </span>
            </div>
          </label>
        <% end %>
      </div>
    </div>

    <!-- Warning message -->
    <div id="limit-warning" class="hidden mt-4 rounded-xl bg-amber-50 border border-amber-200 p-4">
      <div class="flex items-start gap-3">
        <svg class="h-5 w-5 text-amber-500 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
        </svg>
        <div>
          <p class="text-sm font-medium text-amber-800"><%= t('plans.limit_reached_title') %></p>
          <p class="text-sm text-amber-600 mt-1"><%= t('plans.limit_reached_description', count: @max_accounts) %></p>
        </div>
      </div>
    </div>

    <!-- Submit Button -->
    <div class="flex flex-col gap-3 pt-6 sm:flex-row">
      <%= f.submit t('plans.continue_to_main_account'), class: "flex-1 inline-flex items-center justify-center rounded-xl bg-indigo-600 px-6 py-3 text-sm font-semibold text-white shadow-sm hover:bg-indigo-700 transition disabled:opacity-50 disabled:cursor-not-allowed", id: "submit-btn", disabled: true %>
      <%= link_to t('common.cancel'), dashboard_path, class: "inline-flex items-center justify-center rounded-xl border border-slate-200 px-6 py-3 text-sm font-medium text-slate-600 hover:text-slate-900 hover:border-slate-300 transition" %>
    </div>
  <% end %>
</div>

<script>
(function() {
  const checkboxes = document.querySelectorAll('.account-checkbox');
  const selectedCountEl = document.getElementById('selected-count');
  const estimatedPriceEl = document.getElementById('estimated-price');
  const progressBar = document.getElementById('progress-bar');
  const limitWarning = document.getElementById('limit-warning');
  const submitBtn = document.getElementById('submit-btn');
  const selectAllBtn = document.getElementById('select-all-btn');

  const maxAccounts = <%= @max_accounts %>;
  const isPerAccount = <%= @is_per_account ? 'true' : 'false' %>;
  const pricePerAccount = <%= @price_per_account || 0 %>;
  const hasLimit = <%= @plan.max_accounts ? 'true' : 'false' %>;

  function updateUI() {
    const checkedCount = document.querySelectorAll('.account-checkbox:checked').length;

    // Update count
    selectedCountEl.textContent = checkedCount;

    // Update estimated price
    if (isPerAccount && estimatedPriceEl) {
      estimatedPriceEl.textContent = (checkedCount * pricePerAccount).toLocaleString('pt-BR', { minimumFractionDigits: 0 });
    }

    // Update progress bar
    if (progressBar && hasLimit) {
      const percentage = Math.min((checkedCount / maxAccounts) * 100, 100);
      progressBar.style.width = percentage + '%';

      if (checkedCount >= maxAccounts) {
        if (checkedCount > maxAccounts) {
          progressBar.classList.remove('bg-indigo-600', 'bg-emerald-500');
          progressBar.classList.add('bg-amber-500');
        } else {
          progressBar.classList.remove('bg-indigo-600', 'bg-amber-500');
          progressBar.classList.add('bg-emerald-500');
        }
      } else {
        progressBar.classList.remove('bg-amber-500', 'bg-emerald-500');
        progressBar.classList.add('bg-indigo-600');
      }
    }

    // Handle limit logic
    if (hasLimit && checkedCount >= maxAccounts) {
      // Disable unchecked checkboxes when at or over limit
      checkboxes.forEach(cb => {
        if (!cb.checked) {
          cb.disabled = true;
          cb.closest('.account-item').classList.add('opacity-50');
        }
      });

      if (checkedCount > maxAccounts) {
        // Over limit: show warning
        limitWarning.classList.remove('hidden');
      } else {
        // Exactly at limit: no warning
        limitWarning.classList.add('hidden');
      }
    } else {
      limitWarning.classList.add('hidden');

      // Re-enable all checkboxes
      checkboxes.forEach(cb => {
        cb.disabled = false;
        cb.closest('.account-item').classList.remove('opacity-50');
      });
    }

    // Update status badges
    document.querySelectorAll('.account-item').forEach(item => {
      const checkbox = item.querySelector('.account-checkbox');
      const status = item.querySelector('.account-status');
      if (checkbox.checked) {
        status.classList.remove('hidden');
      } else {
        status.classList.add('hidden');
      }
    });

    // Enable/disable submit
    submitBtn.disabled = checkedCount === 0;
  }

  // Add event listeners
  checkboxes.forEach(cb => {
    cb.addEventListener('change', updateUI);
  });

  // Select all button
  if (selectAllBtn) {
    selectAllBtn.addEventListener('click', function() {
      const allChecked = Array.from(checkboxes).every(cb => cb.checked);

      if (allChecked) {
        // Deselect all
        checkboxes.forEach(cb => cb.checked = false);
        selectAllBtn.textContent = '<%= t('plans.select_all') %>';
      } else {
        // Select all (up to limit)
        let count = 0;
        checkboxes.forEach(cb => {
          if (!hasLimit || count < maxAccounts) {
            cb.checked = true;
            count++;
          }
        });
        selectAllBtn.textContent = '<%= t('plans.deselect_all') %>';
      }

      updateUI();
    });
  }

  // Initial UI update
  updateUI();
})();
</script>
