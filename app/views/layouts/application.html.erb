<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || t('app_name') %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <!-- Favicons -->
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="icon" href="/icon.png" type="image/png" sizes="64x64">
    <link rel="apple-touch-icon" href="/icon.png" sizes="180x180">
    <meta name="theme-color" content="#4f46e5">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>

    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />

    <%= javascript_importmap_tags %>

    <!-- jQuery and Select2 JS -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- DataTables (jQuery already loaded) -->
    <link href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>

    <script>
      // Expose translations to JavaScript
      window.I18n = <%= js_translations %>;

      // Close dropdowns when clicking outside
      document.addEventListener('click', function(event) {
        // Close locale dropdown
        const localeDropdown = document.getElementById('locale-dropdown');
        const localeButton = event.target.closest('button[onclick*="locale-dropdown"]');
        if (localeDropdown && !localeDropdown.contains(event.target) && !localeButton) {
          localeDropdown.classList.add('hidden');
        }

        // Close user settings dropdown
        const userDropdown = document.getElementById('user-settings-dropdown');
        const userButton = event.target.closest('#user-settings-button');
        if (userDropdown && !userDropdown.contains(event.target) && !userButton) {
          userDropdown.classList.add('hidden');
        }
      });

      function toggleUserSettingsDropdown() {
        const dropdown = document.getElementById('user-settings-dropdown');
        dropdown.classList.toggle('hidden');
      }
    </script>
  </head>

  <% body_classes = devise_controller? ? "bg-slate-50 text-slate-900" : "bg-white text-slate-900" %>

  <body class="<%= body_classes %> min-h-screen antialiased">
    <div class="min-h-screen flex flex-col">
      <header class="sticky top-0 z-30 border-b border-slate-200/80 bg-white/95 backdrop-blur-sm shadow-sm">
        <div class="max-w-7xl mx-auto w-full px-4 sm:px-6 lg:px-8 py-4 flex flex-wrap items-center gap-4 justify-between">
          <div class="flex items-center gap-3">
            <%= link_to(user_signed_in? ? dashboard_path : root_path, class: "flex items-center gap-3 text-slate-900 no-underline hover:opacity-80 transition-opacity") do %>
              <img src="/logo-icon.svg" alt="<%= t('app_name') %>" class="h-10 w-10 flex-shrink-0" width="40" height="40" />
              <div>
                <p class="text-sm font-bold leading-tight text-slate-900"><%= t('app_name') %></p>
                <p class="text-xs text-slate-500"><%= t('app_tagline') %></p>
              </div>
            <% end %>
          </div>

          <div class="flex flex-1 items-center justify-end gap-4">
            <!-- Language Selector -->
            <div class="relative" data-controller="locale-selector">
              <button
                onclick="document.getElementById('locale-dropdown').classList.toggle('hidden')"
                class="inline-flex items-center gap-2 px-3 py-2 rounded-lg border border-slate-200 bg-white text-sm font-medium text-slate-700 hover:text-slate-900 hover:border-slate-300 hover:bg-slate-50 transition-all shadow-sm"
                title="<%= t('navigation.language') %>">
                <% if I18n.locale == :'pt-BR' %>
                  <span class="text-xl">ðŸ‡§ðŸ‡·</span>
                  <span class="hidden sm:inline">PT</span>
                <% else %>
                  <span class="text-xl">ðŸ‡ºðŸ‡¸</span>
                  <span class="hidden sm:inline">EN</span>
                <% end %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </button>
              <div id="locale-dropdown" class="hidden absolute right-0 mt-2 w-48 rounded-lg border border-slate-200 bg-white shadow-lg z-50">
                <div class="py-1">
                  <%= link_to set_locale_path(:'pt-BR'), class: "flex items-center gap-3 px-4 py-2 text-sm text-slate-700 hover:bg-slate-50 #{'bg-indigo-50 text-indigo-700' if I18n.locale == :'pt-BR'}" do %>
                    <span class="text-xl">ðŸ‡§ðŸ‡·</span>
                    <span>PortuguÃªs (Brasil)</span>
                    <% if I18n.locale == :'pt-BR' %>
                      <svg class="w-4 h-4 ml-auto text-indigo-600" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                    <% end %>
                  <% end %>
                  <%= link_to set_locale_path(:en), class: "flex items-center gap-3 px-4 py-2 text-sm text-slate-700 hover:bg-slate-50 #{'bg-indigo-50 text-indigo-700' if I18n.locale == :en}" do %>
                    <span class="text-xl">ðŸ‡ºðŸ‡¸</span>
                    <span>English</span>
                    <% if I18n.locale == :en %>
                      <svg class="w-4 h-4 ml-auto text-indigo-600" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>

            <% if current_page?(pending_path) %>
            <% if user_signed_in? %>
              <div class="flex items-center gap-2">
                <%= button_to t('navigation.sign_out'), destroy_user_session_path, method: :delete, class: "inline-flex items-center px-4 py-2 rounded-lg border border-slate-200 bg-white text-sm font-medium text-slate-700 hover:text-slate-900 hover:border-slate-300 hover:bg-slate-50 transition-all shadow-sm" %>
              </div>
            <% else %>
              <div class="flex items-center gap-3">
                <%= link_to t('navigation.sign_in'), new_user_session_path, class: "text-sm font-medium text-slate-600 hover:text-slate-900 transition-colors" %>
                <%= link_to t('navigation.sign_up'), new_user_registration_path, class: "inline-flex items-center px-5 py-2.5 rounded-lg bg-indigo-600 text-white font-semibold shadow-sm hover:bg-indigo-700 hover:shadow-md transition-all" %>
              </div>
            <% end %>
          <% else %>
            <% if user_signed_in? %>
              <nav class="hidden md:flex items-center gap-1 text-sm">
                <%= navigation_link_to t('navigation.dashboard'), dashboard_path %>
                <%= navigation_link_to t('navigation.leads'), leads_path %>
                <%= navigation_link_to t('navigation.pricing'), pricing_path %>
              </nav>

              <% if active_customer_context.present? %>
                <div class="flex items-center gap-3 rounded-xl border border-slate-200 bg-gradient-to-br from-slate-50 to-white px-4 py-2.5 shadow-sm hover:shadow transition-shadow">
                  <div class="flex-shrink-0">
                    <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-[11px] uppercase tracking-wide text-slate-500 font-semibold"><%= t('account.active') %></p>
                    <p class="text-sm font-bold text-slate-900">
                      <%= format_customer_id(active_customer_context[:customer_id]) %>
                    </p>
                    <% if active_customer_context[:display_name].present? %>
                      <p class="text-xs text-slate-500 truncate max-w-[120px]"><%= active_customer_context[:display_name] %></p>
                    <% end %>
                  </div>
                  <button onclick="openAccountSwitcherModal()" class="ml-2 text-xs font-semibold text-indigo-600 hover:text-indigo-700 transition-colors"><%= t('account.switch') %></button>
                </div>
              <% end %>

              <!-- User Settings Dropdown -->
              <div class="relative">
                <button
                  id="user-settings-button"
                  onclick="toggleUserSettingsDropdown()"
                  class="inline-flex items-center gap-2 px-3 py-2 rounded-lg border border-slate-200 bg-white text-sm font-medium text-slate-700 hover:text-slate-900 hover:border-slate-300 hover:bg-slate-50 transition-all shadow-sm"
                  title="<%= t('user_settings.title') %>">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  <span class="hidden sm:inline"><%= t('user_settings.settings') %></span>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                  </svg>
                </button>

                <div id="user-settings-dropdown" class="hidden absolute right-0 mt-2 w-72 rounded-xl border border-slate-200 bg-white shadow-xl z-50">
                  <!-- User Info Header -->
                  <div class="px-4 py-3 border-b border-slate-100 bg-slate-50 rounded-t-xl">
                    <p class="text-sm font-semibold text-slate-900 truncate"><%= current_user.email %></p>
                    <% if current_user.user_subscription&.plan %>
                      <div class="flex items-center gap-2 mt-1">
                        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                          <%= current_user.user_subscription.plan.name %>
                        </span>
                        <span class="text-xs text-slate-500">
                          <%= number_to_currency(current_user.user_subscription.calculated_price_brl, unit: "R$", separator: ",", delimiter: ".") %>/mÃªs
                        </span>
                      </div>
                    <% end %>
                  </div>

                  <div class="py-1">
                    <!-- Plan Section -->
                    <div class="px-3 py-2">
                      <p class="text-xs font-semibold text-slate-400 uppercase tracking-wider"><%= t('user_settings.plan_section') %></p>
                    </div>

                    <%= link_to billing_path, class: "flex items-center gap-3 px-4 py-2 text-sm text-slate-700 hover:bg-slate-50 transition-colors" do %>
                      <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                      </svg>
                      <span><%= t('user_settings.billing') %></span>
                    <% end %>

                    <% if current_user.user_subscription&.plan %>
                      <%= link_to google_ads_change_plan_path, class: "flex items-center gap-3 px-4 py-2 text-sm text-slate-700 hover:bg-slate-50 transition-colors" do %>
                        <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                        </svg>
                        <span><%= t('user_settings.change_plan') %></span>
                      <% end %>
                    <% else %>
                      <%= link_to pricing_path, class: "flex items-center gap-3 px-4 py-2 text-sm text-slate-700 hover:bg-slate-50 transition-colors" do %>
                        <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <span><%= t('user_settings.view_plans') %></span>
                      <% end %>
                    <% end %>

                    <div class="border-t border-slate-100 my-1"></div>

                    <!-- Google Account Section -->
                    <div class="px-3 py-2">
                      <p class="text-xs font-semibold text-slate-400 uppercase tracking-wider"><%= t('user_settings.google_section') %></p>
                    </div>

                    <% google_account = current_user.google_accounts.first %>
                    <% if google_account %>
                      <%= button_to google_ads_disconnect_path(google_account), method: :delete, data: { turbo_confirm: t('account.disconnect_confirm') }, class: "w-full flex items-center gap-3 px-4 py-2 text-sm text-rose-600 hover:bg-rose-50 transition-colors" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7a4 4 0 11-8 0 4 4 0 018 0zM9 14a6 6 0 00-6 6v1h12v-1a6 6 0 00-6-6zM21 12h-6"/>
                        </svg>
                        <span><%= t('user_settings.disconnect_google') %></span>
                      <% end %>
                    <% else %>
                      <%= link_to google_ads_auth_start_path, class: "flex items-center gap-3 px-4 py-2 text-sm text-slate-700 hover:bg-slate-50 transition-colors" do %>
                        <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
                        </svg>
                        <span><%= t('user_settings.connect_google') %></span>
                      <% end %>
                    <% end %>

                    <div class="border-t border-slate-100 my-1"></div>

                    <!-- Account Section -->
                    <div class="px-3 py-2">
                      <p class="text-xs font-semibold text-slate-400 uppercase tracking-wider"><%= t('user_settings.account_section') %></p>
                    </div>

                    <%= link_to edit_user_registration_path, class: "flex items-center gap-3 px-4 py-2 text-sm text-slate-700 hover:bg-slate-50 transition-colors" do %>
                      <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
                      </svg>
                      <span><%= t('user_settings.change_password') %></span>
                    <% end %>

                    <div class="border-t border-slate-100 my-1"></div>

                    <%= button_to destroy_user_session_path, method: :delete, class: "w-full flex items-center gap-3 px-4 py-2 text-sm text-slate-700 hover:bg-slate-50 transition-colors rounded-b-xl" do %>
                      <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                      </svg>
                      <span><%= t('navigation.sign_out') %></span>
                    <% end %>
                  </div>
                </div>
              </div>

              <!-- Mobile Dashboard Link -->
              <%= link_to t('navigation.dashboard'), dashboard_path, class: "md:hidden text-sm font-medium text-slate-600 hover:text-slate-900 transition-colors" %>
            <% else %>
              <div class="flex items-center gap-3">
                <%= link_to t('navigation.pricing'), pricing_path, class: "text-sm font-medium text-slate-600 hover:text-slate-900 transition-colors" %>
                <%= link_to t('navigation.sign_in'), new_user_session_path, class: "text-sm font-medium text-slate-600 hover:text-slate-900 transition-colors" %>
                <%= link_to t('navigation.sign_up'), new_user_registration_path, class: "inline-flex items-center px-5 py-2.5 rounded-lg bg-indigo-600 text-white font-semibold shadow-sm hover:bg-indigo-700 hover:shadow-md transition-all" %>
              </div>
            <% end %>
          <% end %>
          </div>
        </div>
      </header>

      <% if notice.present? || alert.present? %>
        <div class="max-w-4xl mx-auto w-full px-4 sm:px-6 lg:px-8 mt-4 space-y-2">
          <% if notice.present? %>
            <div class="rounded-xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-900 shadow-sm flex items-center gap-2">
              <svg class="w-5 h-5 text-emerald-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span><%= notice %></span>
            </div>
          <% end %>
          <% if alert.present? %>
            <div class="rounded-xl border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-900 shadow-sm flex items-center gap-2">
              <svg class="w-5 h-5 text-rose-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
              <span><%= alert %></span>
            </div>
          <% end %>
        </div>
      <% end %>

      <main class="flex-1 w-full">
        <div class="<%= devise_controller? ? 'max-w-lg mx-auto px-4 sm:px-6 lg:px-8 py-10 w-full' : 'max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10 w-full' %>">
          <%= yield %>
        </div>
      </main>

      <footer class="border-t border-slate-200 bg-white py-8 text-center">
        <p class="text-xs text-slate-500">
          <%= t('footer.copyright', year: Time.current.year, privacy_link: link_to(t('footer.privacy_policy'), privacy_path)).html_safe %>
        </p>
      </footer>
    </div>
  </body>
</html>
