<div class="space-y-8">
  <!-- Header -->
  <div class="flex flex-wrap items-center justify-between gap-4">
    <%= link_to @back_params.present? ? dashboard_path(@back_params) : dashboard_path, 
                class: "inline-flex items-center gap-2 text-sm font-semibold text-indigo-600 hover:text-indigo-700 transition-colors" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      <span>Voltar</span>
    <% end %>
    <h1 class="text-3xl font-bold text-slate-900">Detalhes do Lead</h1>
    <div></div>
  </div>

  <!-- Cards Grid -->
  <div class="grid gap-6 lg:grid-cols-2">
    <!-- Informações do Lead -->
    <section class="rounded-2xl border border-slate-200 bg-gradient-to-br from-white to-slate-50 p-8 shadow-lg">
      <div class="flex items-center gap-3 mb-6">
        <div class="flex-shrink-0 w-10 h-10 rounded-xl bg-gradient-to-br from-indigo-500 to-indigo-600 flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </div>
        <h2 class="text-xl font-bold text-slate-900">Informações do Lead</h2>
      </div>
      <div class="space-y-5">
        <div>
          <p class="text-xs font-bold uppercase tracking-wide text-slate-500 mb-2">Lead ID</p>
          <p class="text-base font-bold text-slate-900 font-mono"><%= @lead.id %></p>
        </div>
        <div>
          <p class="text-xs font-bold uppercase tracking-wide text-slate-500 mb-2">Tipo</p>
          <p class="text-base text-slate-700 font-medium"><%= @lead.lead_type || 'N/A' %></p>
        </div>
        <div>
          <p class="text-xs font-bold uppercase tracking-wide text-slate-500 mb-2">Status</p>
          <span class="inline-flex items-center rounded-full px-4 py-1.5 text-sm font-semibold <%= status_color_class(@lead.status) %>">
            <%= format_lead_status(@lead.status) %>
          </span>
        </div>
        <div>
          <p class="text-xs font-bold uppercase tracking-wide text-slate-500 mb-2">Data de Criação</p>
          <p class="text-base text-slate-700 font-medium">
            <%= @lead.created_at ? @lead.created_at.in_time_zone.strftime("%d/%m/%Y às %H:%M") : 'N/A' %>
          </p>
        </div>
      </div>
    </section>

    <!-- Informações de Contato -->
    <section class="rounded-2xl border border-slate-200 bg-gradient-to-br from-white to-slate-50 p-8 shadow-lg">
      <div class="flex items-center gap-3 mb-6">
        <div class="flex-shrink-0 w-10 h-10 rounded-xl bg-gradient-to-br from-emerald-500 to-emerald-600 flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </div>
        <h2 class="text-xl font-bold text-slate-900">Informações de Contato</h2>
      </div>
      <div class="space-y-5">
        <div>
          <p class="text-xs font-bold uppercase tracking-wide text-slate-500 mb-2">Nome</p>
          <p class="text-base text-slate-700 font-medium"><%= @lead.name || 'N/A' %></p>
        </div>
        <div>
          <p class="text-xs font-bold uppercase tracking-wide text-slate-500 mb-2">Telefone</p>
          <p class="text-base text-slate-700 font-medium"><%= @lead.phone || 'N/A' %></p>
        </div>
        <div>
          <p class="text-xs font-bold uppercase tracking-wide text-slate-500 mb-2">Email</p>
          <p class="text-base text-slate-700 font-medium break-all"><%= @lead.email || 'N/A' %></p>
        </div>
      </div>
    </section>

    <!-- Cobrança e Feedback -->
    <section class="rounded-2xl border border-slate-200 bg-gradient-to-br from-white to-slate-50 p-8 shadow-lg">
      <div class="flex items-center gap-3 mb-6">
        <div class="flex-shrink-0 w-10 h-10 rounded-xl bg-gradient-to-br from-amber-500 to-amber-600 flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <h2 class="text-xl font-bold text-slate-900">Cobrança e Feedback</h2>
      </div>
      <div class="space-y-5">
        <div>
          <p class="text-xs font-bold uppercase tracking-wide text-slate-500 mb-2">Status de Cobrança</p>
          <p class="text-base text-slate-700 font-medium"><%= @lead.charge_status || 'N/A' %></p>
        </div>
        <div>
          <p class="text-xs font-bold uppercase tracking-wide text-slate-500 mb-2">Status de Feedback</p>
          <p class="text-base text-slate-700 font-medium"><%= @stored_feedback ? t('leads.with_feedback') : (@lead.feedback_status || 'N/A') %></p>
        </div>
      </div>
    </section>

    <!-- Informações Adicionais -->
    <section class="rounded-2xl border border-slate-200 bg-gradient-to-br from-white to-slate-50 p-8 shadow-lg">
      <div class="flex items-center gap-3 mb-6">
        <div class="flex-shrink-0 w-10 h-10 rounded-xl bg-gradient-to-br from-slate-500 to-slate-600 flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
          </svg>
        </div>
        <h2 class="text-xl font-bold text-slate-900">Informações Adicionais</h2>
      </div>
      <div class="space-y-5">
        <div>
          <p class="text-xs font-bold uppercase tracking-wide text-slate-500 mb-2">Categoria</p>
          <p class="text-base text-slate-700 font-medium"><%= format_category_id(@lead.category_id) %></p>
        </div>
        <div>
          <p class="text-xs font-bold uppercase tracking-wide text-slate-500 mb-2">Serviço</p>
          <p class="text-base text-slate-700 font-medium"><%= format_service_id(@lead.service_id) %></p>
        </div>
      </div>
    </section>
  </div>

  <% if @stored_feedback %>
    <!-- Feedback enviado (mesmo visual do modal) -->
    <section class="mt-8 overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-lg ring-1 ring-slate-200/50">
      <!-- Header com gradiente e ícone -->
      <div class="bg-gradient-to-br from-emerald-500 via-emerald-600 to-teal-600 px-6 pt-6 pb-5 text-white">
        <div class="flex items-center gap-3">
          <div class="flex h-12 w-12 shrink-0 items-center justify-center rounded-xl bg-white/20 shadow-inner">
            <svg class="h-7 w-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div>
            <h2 class="text-lg font-bold text-white"><%= t('lead_feedback_submission.stored_feedback_title') %></h2>
            <p class="mt-0.5 text-sm text-emerald-100"><%= t('lead_feedback_submission.stored_feedback_subtitle') %></p>
          </div>
        </div>
      </div>
      <div class="space-y-3 p-6">
        <!-- Avaliação -->
        <div class="flex gap-3 rounded-xl border border-slate-100 bg-gradient-to-br from-emerald-50 to-white p-4">
          <div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-lg bg-emerald-100 text-emerald-600">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          </div>
          <div class="min-w-0 flex-1">
            <p class="text-xs font-semibold uppercase tracking-wide text-emerald-700/80"><%= t('leads.how_do_you_rate') %></p>
            <p class="mt-1 text-base font-semibold text-slate-900"><%= @stored_feedback.survey_answer_label || @stored_feedback.survey_answer %></p>
          </div>
        </div>
        <% if @stored_feedback.reason.present? %>
          <!-- Motivo -->
          <div class="flex gap-3 rounded-xl border border-slate-100 bg-gradient-to-br from-indigo-50/80 to-white p-4">
            <div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-lg bg-indigo-100 text-indigo-600">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/></svg>
            </div>
            <div class="min-w-0 flex-1">
              <p class="text-xs font-semibold uppercase tracking-wide text-indigo-700/80"><%= t('leads.reason') %></p>
              <p class="mt-1 text-base font-medium text-slate-900"><%= @stored_feedback.reason_label || @stored_feedback.reason %></p>
            </div>
          </div>
        <% end %>
        <% if @stored_feedback.other_reason_comment.present? %>
          <!-- Comentário -->
          <div class="flex gap-3 rounded-xl border border-slate-100 bg-gradient-to-br from-amber-50/80 to-white p-4">
            <div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-lg bg-amber-100 text-amber-600">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/></svg>
            </div>
            <div class="min-w-0 flex-1">
              <p class="text-xs font-semibold uppercase tracking-wide text-amber-700/80"><%= t('lead_feedback_submission.other_comment') %></p>
              <p class="mt-1 text-sm text-slate-700 leading-relaxed"><%= @stored_feedback.other_reason_comment %></p>
            </div>
          </div>
        <% end %>
        <!-- Decisão de crédito -->
        <div class="flex gap-3 rounded-xl border border-slate-100 bg-gradient-to-br from-slate-50 to-white p-4">
          <div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-lg bg-slate-200 text-slate-600">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          </div>
          <div class="min-w-0 flex-1">
            <p class="text-xs font-semibold uppercase tracking-wide text-slate-500"><%= t('lead_feedback_submission.credit_decision_label') %></p>
            <p class="mt-1 text-base font-semibold text-slate-900"><%= @stored_feedback.credit_issuance_decision_label %></p>
          </div>
        </div>
        <!-- Data de envio -->
        <div class="flex gap-3 rounded-xl border border-slate-100 bg-slate-50/50 p-4">
          <div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-lg bg-slate-100 text-slate-500">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
          </div>
          <div class="min-w-0 flex-1">
            <p class="text-xs font-semibold uppercase tracking-wide text-slate-500"><%= t('lead_feedback_submission.submitted_at') %></p>
            <p class="mt-1 text-sm font-medium text-slate-600"><%= l(@stored_feedback.created_at, format: :long) %></p>
          </div>
        </div>
      </div>
    </section>
  <% end %>
</div>

