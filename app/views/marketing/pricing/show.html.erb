<div class="max-w-7xl mx-auto space-y-10">
  <% if user_signed_in? && @current_subscription&.pending? %>
    <!-- Pending payment banner -->
    <div class="rounded-2xl border-2 border-amber-300 bg-gradient-to-r from-amber-50 to-yellow-50 p-6 shadow-md">
      <div class="flex flex-col sm:flex-row items-center gap-4">
        <div class="flex-shrink-0">
          <div class="w-14 h-14 bg-amber-100 rounded-full flex items-center justify-center">
            <svg class="w-7 h-7 text-amber-600 animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
        <div class="flex-1 text-center sm:text-left">
          <h3 class="text-lg font-bold text-amber-900">Pagamento pendente</h3>
          <p class="text-sm text-amber-700 mt-1">
            Você selecionou o plano <strong><%= @current_subscription.plan.sub_account_label %></strong>
            (<%= number_to_currency(@current_subscription.plan.price_brl, unit: "R$", format: "%u %n", separator: ",", delimiter: ".", precision: 0) %>/mês).
            Complete o pagamento para ativar sua assinatura.
          </p>
        </div>
        <div class="flex-shrink-0">
          <% if @current_subscription.plan.stripe_payment_link.present? %>
            <%= link_to @current_subscription.plan.payment_link_url_for(current_user),
                class: "inline-flex items-center px-6 py-3 bg-amber-600 hover:bg-amber-700 text-white font-bold rounded-xl shadow-lg hover:shadow-xl transition-all",
                data: { turbo: false } do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
              </svg>
              Completar pagamento
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="text-center space-y-4">
    <div class="inline-flex items-center gap-2 rounded-full bg-indigo-50 text-indigo-700 px-4 py-2 text-xs font-semibold uppercase tracking-wider">
      <span class="inline-flex h-6 w-6 items-center justify-center rounded-full bg-indigo-600 text-white font-bold">✓</span>
      <span><%= t("pricing.badge") %></span>
    </div>
    <h1 class="text-4xl sm:text-5xl font-bold text-slate-900"><%= t("pricing.title") %></h1>
    <p class="text-lg text-slate-600 max-w-3xl mx-auto"><%= t("pricing.subtitle") %></p>
    <div class="inline-flex items-center gap-3 rounded-xl border border-slate-200 bg-white px-5 py-3 shadow-sm">
      <div class="rounded-full bg-indigo-100 text-indigo-700 px-3 py-1 text-xs font-bold uppercase tracking-wider"><%= t("pricing.bill_cycle") %></div>
      <p class="text-sm text-slate-700"><%= t("pricing.bill_cycle_detail") %></p>
      <span class="text-slate-400">•</span>
      <p class="text-sm text-slate-700"><%= t("pricing.support_note") %></p>
      <span class="text-slate-400">•</span>
      <p class="text-sm text-slate-700"><%= t("pricing.switch_note") %></p>
    </div>
  </div>

  <!-- Plans Grid - 5 plans -->
  <div class="grid md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-5 items-stretch">
    <% @plans.each do |plan| %>
      <%
        is_recommended = plan.recommended?
        card_classes = is_recommended ?
          "rounded-2xl border-2 border-emerald-200 bg-gradient-to-b from-white via-emerald-50 to-white shadow-xl hover:shadow-2xl" :
          "rounded-2xl border border-slate-200 bg-white shadow-lg hover:shadow-xl"
        accent_color = is_recommended ? "emerald" : "indigo"
      %>
      <div class="<%= card_classes %> transition-all flex flex-col relative">
        <% if is_recommended %>
          <div class="absolute -top-3 right-4 px-3 py-1 rounded-full bg-emerald-500 text-white text-xs font-bold uppercase tracking-wider shadow-md">
            <%= t('plans.recommended') %>
          </div>
        <% end %>

        <div class="p-5 flex flex-col h-full space-y-3">
          <!-- Plan Name & Sub-accounts -->
          <div>
            <p class="text-xs font-semibold text-<%= accent_color %>-600 uppercase tracking-wide mb-1">
              LSA Escale
            </p>
            <p class="text-base font-bold text-slate-900">
              <%= plan.sub_account_label %>
            </p>
          </div>

          <!-- Price -->
          <div class="space-y-1">
            <p class="text-3xl font-bold text-slate-900">
              <%= number_to_currency(plan.price_brl, unit: "R$", format: "%u %n", separator: ",", delimiter: ".", precision: 0) %>
            </p>
            <p class="text-xs text-slate-500"><%= t("pricing.per_month") %></p>
          </div>

          <!-- Description -->
          <p class="text-sm text-slate-600 leading-relaxed flex-1">
            <% if plan.unlimited? %>
              Gerencie 50 ou mais subcontas sem limites.
            <% elsif plan.max_accounts == 1 %>
              Ideal para gerenciar uma única subconta.
            <% elsif plan.max_accounts == 49 %>
              Para agências que gerenciam de 30 a 49 subcontas.
            <% else %>
              Gerencie até <%= plan.max_accounts %> subcontas.
            <% end %>
          </p>

          <!-- Features -->
          <ul class="space-y-2 py-2">
            <li class="flex items-center gap-2 text-sm text-slate-600">
              <svg class="h-4 w-4 text-emerald-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              <% if plan.unlimited? %>
                Subcontas ilimitadas
              <% else %>
                Até <%= plan.max_accounts %> subconta<%= plan.max_accounts == 1 ? '' : 's' %>
              <% end %>
            </li>
            <li class="flex items-center gap-2 text-sm text-slate-600">
              <svg class="h-4 w-4 text-emerald-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              <%= t('plans.features.full_access') %>
            </li>
            <li class="flex items-center gap-2 text-sm text-slate-600">
              <svg class="h-4 w-4 text-emerald-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              <%= t('plans.features.support') %>
            </li>
          </ul>

          <!-- CTA -->
          <% if user_signed_in? %>
            <% if @current_subscription&.active? && @current_subscription&.plan_id == plan.id %>
              <!-- Current plan -->
              <div class="inline-flex w-full justify-center rounded-xl bg-slate-200 px-4 py-3 text-sm font-semibold text-slate-500 mt-auto cursor-default">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                Plano atual
              </div>
            <% elsif @current_subscription&.active? %>
              <!-- Already has different active plan -->
              <%= link_to google_ads_change_plan_path,
                  class: "inline-flex w-full justify-center rounded-xl #{is_recommended ? 'bg-emerald-600 hover:bg-emerald-700' : 'bg-indigo-600 hover:bg-indigo-700'} px-4 py-3 text-sm font-semibold text-white shadow-md hover:shadow-lg transition-all mt-auto" do %>
                Trocar para este plano
              <% end %>
            <% else %>
              <!-- No active subscription - select plan and go to payment -->
              <%= button_to payments_select_plan_path,
                  params: { plan_id: plan.id },
                  method: :post,
                  class: "inline-flex w-full justify-center rounded-xl #{is_recommended ? 'bg-emerald-600 hover:bg-emerald-700' : 'bg-indigo-600 hover:bg-indigo-700'} px-4 py-3 text-sm font-semibold text-white shadow-md hover:shadow-lg transition-all mt-auto cursor-pointer",
                  data: { turbo: false } do %>
                <%= t('plans.start_now') %>
              <% end %>
            <% end %>
          <% else %>
            <%= link_to new_user_registration_path,
                class: "inline-flex w-full justify-center rounded-xl #{is_recommended ? 'bg-emerald-600 hover:bg-emerald-700' : 'bg-indigo-600 hover:bg-indigo-700'} px-4 py-3 text-sm font-semibold text-white shadow-md hover:shadow-lg transition-all mt-auto" do %>
              <%= t('plans.start_now') %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- FAQ Section -->
  <div class="rounded-2xl border border-slate-200 bg-white p-8 shadow-sm">
    <h2 class="text-2xl font-bold text-slate-900 mb-6 text-center"><%= t('pricing.faq.title') %></h2>
    <div class="grid md:grid-cols-2 gap-6">
      <div class="space-y-2">
        <h3 class="font-semibold text-slate-900"><%= t('pricing.faq.what_is_subaccount.question') %></h3>
        <p class="text-sm text-slate-600"><%= t('pricing.faq.what_is_subaccount.answer') %></p>
      </div>
      <div class="space-y-2">
        <h3 class="font-semibold text-slate-900"><%= t('pricing.faq.can_change_plan.question') %></h3>
        <p class="text-sm text-slate-600"><%= t('pricing.faq.can_change_plan.answer') %></p>
      </div>
      <div class="space-y-2">
        <h3 class="font-semibold text-slate-900"><%= t('pricing.faq.payment_methods.question') %></h3>
        <p class="text-sm text-slate-600"><%= t('pricing.faq.payment_methods.answer') %></p>
      </div>
      <div class="space-y-2">
        <h3 class="font-semibold text-slate-900"><%= t('pricing.faq.trial.question') %></h3>
        <p class="text-sm text-slate-600"><%= t('pricing.faq.trial.answer') %></p>
      </div>
    </div>
  </div>
</div>
