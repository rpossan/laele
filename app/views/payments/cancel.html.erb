<div class="min-h-[60vh] flex items-center justify-center">
  <div class="max-w-md w-full mx-auto">
    <div class="bg-white rounded-2xl shadow-xl border border-slate-100 p-8 text-center">
      <!-- Cancel Icon -->
      <div class="w-20 h-20 mx-auto mb-6 bg-slate-100 rounded-full flex items-center justify-center">
        <svg class="w-10 h-10 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </div>

      <h1 class="text-2xl font-bold text-slate-900 mb-2"><%= t('payments.cancel_title') %></h1>
      <p class="text-slate-600 mb-6"><%= t('payments.cancel_message') %></p>

      <div class="space-y-3">
        <%= link_to pricing_path, class: "inline-flex items-center justify-center w-full px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-xl transition-colors" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <%= t('payments.view_plans') %>
        <% end %>

        <%= link_to dashboard_path, class: "inline-flex items-center justify-center w-full px-6 py-3 border border-slate-300 hover:border-slate-400 text-slate-700 font-semibold rounded-xl transition-colors" do %>
          <%= t('payments.go_to_dashboard') %>
        <% end %>
      </div>
    </div>
  </div>
</div>
